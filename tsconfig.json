{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["client/src/*"],
      "@shared/*": ["shared/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": ["node"]
  },
  "include": ["client/src/**/*", "server/**/*", "shared/**/*", "drizzle/**/*"],
  "exclude": ["node_modules", "dist"]
}
