# Prevent pnpm TTY errors in non-interactive/deployment environments
# This file ensures pnpm works correctly in CI/CD pipelines

# Force CI mode to prevent interactive prompts
ci=true

# Disable interactive prompts
prefer-offline=true

# Suppress update notifications
update-notifier=false

# Auto-install peers
auto-install-peers=true

# Strict peer dependencies off to avoid prompts
strict-peer-dependencies=false

# Disable color output in CI
color=false

# Use lockfile
frozen-lockfile=false
