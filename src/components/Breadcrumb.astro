---
interface BreadcrumbItem {
  label: string;
  href?: string;
}

interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;

// Schema.org BreadcrumbList Markup generieren
const schemaData = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": items.map((item, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": item.label,
    ...(item.href && index < items.length - 1 ? { "item": `https://leipzig-photovoltaik.de${item.href}` } : {})
  }))
};
---

<!-- Schema.org BreadcrumbList Markup -->
<script type="application/ld+json" set:html={JSON.stringify(schemaData)} />

<!-- Breadcrumb Navigation -->
<nav aria-label="Breadcrumb" class="bg-gray-50 border-b border-gray-200">
  <div class="container-custom mx-auto py-3">
    <ol class="flex items-center space-x-2 text-sm">
      {items.map((item, index) => (
        <li class="flex items-center">
          {index > 0 && (
            <svg class="w-4 h-4 text-gray-400 mx-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          )}
          {item.href && index < items.length - 1 ? (
            <a href={item.href} class="text-[var(--senec-turquoise)] hover:underline">
              {item.label}
            </a>
          ) : (
            <span class="text-gray-600 font-medium">
              {item.label}
            </span>
          )}
        </li>
      ))}
    </ol>
  </div>
</nav>
