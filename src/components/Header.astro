---
<header class="bg-white shadow-sm sticky top-0 z-50">
  <div class="container-custom mx-auto flex justify-between items-center h-20">
    <a href="/" class="flex items-center">
      <img src="/images/logo.png" alt="SENEC Logo" class="h-10 w-auto" />
    </a>
    
    <nav class="hidden md:flex space-x-8">
      <a href="/" class="text-[var(--senec-blue)] font-medium hover:text-[var(--senec-turquoise)] transition-colors">Home</a>
      <a href="/solarmanager" class="text-[var(--senec-blue)] font-medium hover:text-[var(--senec-turquoise)] transition-colors">Solarmanager</a>
      <a href="/#produkte" class="text-[var(--senec-blue)] font-medium hover:text-[var(--senec-turquoise)] transition-colors">Produkte</a>
      <a href="/#rechner" class="text-[var(--senec-blue)] font-medium hover:text-[var(--senec-turquoise)] transition-colors">Solarrechner</a>
    </nav>
    
    <div class="hidden md:block">
      <a href="/#kontakt" class="btn-primary">
        Angebot anfordern
      </a>
    </div>

    <!-- Mobile Menu Button -->
    <button id="mobile-menu-btn" class="md:hidden text-[var(--senec-blue)] focus:outline-none">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-white border-t border-gray-100 absolute w-full left-0 top-20 shadow-lg">
    <div class="flex flex-col p-4 space-y-4">
      <a href="/" class="text-[var(--senec-blue)] font-medium hover:text-[var(--senec-turquoise)]">Home</a>
      <a href="/solarmanager" class="text-[var(--senec-blue)] font-medium hover:text-[var(--senec-turquoise)]">Solarmanager</a>
      <a href="/#produkte" class="text-[var(--senec-blue)] font-medium hover:text-[var(--senec-turquoise)]">Produkte</a>
      <a href="/#rechner" class="text-[var(--senec-blue)] font-medium hover:text-[var(--senec-turquoise)]">Solarrechner</a>
      <a href="/#kontakt" class="btn-primary text-center">Angebot anfordern</a>
    </div>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');

  if (btn && menu) {
    btn.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
  }
</script>
