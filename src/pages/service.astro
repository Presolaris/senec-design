---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const pageTitle = "PV Service & Wartung Leipzig | Reinigung & Reparatur";
const pageDescription = "Damit Ihre Anlage läuft wie am ersten Tag. Professionelle Wartung, Reinigung und Reparatur für Photovoltaikanlagen in Leipzig.";
---

<Layout title={pageTitle} description={pageDescription}>
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="bg-gray-50 py-16 md:py-24">
      <div class="container-custom mx-auto text-center max-w-4xl">
        <h1 class="text-4xl md:text-5xl font-bold text-[var(--senec-blue)] mb-6">
          Service, der sich <span class="text-[var(--senec-turquoise)]">auszahlt.</span>
        </h1>
        <p class="text-xl text-gray-600 leading-relaxed mb-8">
          Eine Photovoltaikanlage ist eine Investition für Jahrzehnte. Damit die Rendite stimmt, 
          muss die Leistung stimmen. Wir kümmern uns darum.
        </p>
      </div>
    </section>

    <!-- Services Grid -->
    <section class="py-20 bg-white">
      <div class="container-custom mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          
          <!-- Wartung -->
          <div class="bg-white border border-gray-100 rounded-2xl p-8 shadow-sm hover:shadow-lg transition-all group">
            <div class="w-14 h-14 bg-[var(--senec-blue)]/10 text-[var(--senec-blue)] rounded-xl flex items-center justify-center mb-6 group-hover:bg-[var(--senec-blue)] group-hover:text-white transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-[var(--senec-blue)] mb-4">Wartung & Check</h3>
            <p class="text-gray-600 mb-6">
              Regelmäßige Überprüfung aller Komponenten auf Sicherheit und Leistung. Wir finden Fehler, bevor sie teuer werden.
            </p>
            <ul class="space-y-2 text-sm text-gray-500 mb-8">
              <li>• Sichtprüfung der Module</li>
              <li>• Messung der Stränge</li>
              <li>• Prüfung der Wechselrichter</li>
            </ul>
            <a href="#kontakt" class="text-[var(--senec-turquoise)] font-bold hover:underline">Wartung anfragen →</a>
          </div>

          <!-- Reinigung -->
          <div class="bg-white border border-gray-100 rounded-2xl p-8 shadow-sm hover:shadow-lg transition-all group">
            <div class="w-14 h-14 bg-[var(--senec-turquoise)]/10 text-[var(--senec-turquoise)] rounded-xl flex items-center justify-center mb-6 group-hover:bg-[var(--senec-turquoise)] group-hover:text-white transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.384-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-[var(--senec-blue)] mb-4">PV-Reinigung</h3>
            <p class="text-gray-600 mb-6">
              Schmutz, Vogelkot und Moos können den Ertrag um bis zu 20% mindern. Wir reinigen schonend und ökologisch mit Reinwasser.
            </p>
            <ul class="space-y-2 text-sm text-gray-500 mb-8">
              <li>• Schonendes Reinwasser-Verfahren</li>
              <li>• Ohne Chemie</li>
              <li>• Werterhalt der Module</li>
            </ul>
            <a href="#kontakt" class="text-[var(--senec-turquoise)] font-bold hover:underline">Reinigung buchen →</a>
          </div>

          <!-- Reparatur -->
          <div class="bg-white border border-gray-100 rounded-2xl p-8 shadow-sm hover:shadow-lg transition-all group">
            <div class="w-14 h-14 bg-[var(--senec-yellow)]/10 text-[var(--senec-yellow)] rounded-xl flex items-center justify-center mb-6 group-hover:bg-[var(--senec-yellow)] group-hover:text-white transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-[var(--senec-blue)] mb-4">Reparatur</h3>
            <p class="text-gray-600 mb-6">
              Wechselrichter defekt? Marderverbiss? Sturmschaden? Wir sind schnell vor Ort und bringen Ihre Anlage wieder ans Netz.
            </p>
            <ul class="space-y-2 text-sm text-gray-500 mb-8">
              <li>• Schnelle Reaktionszeiten</li>
              <li>• Austauschkomponenten</li>
              <li>• Versicherungsgutachten</li>
            </ul>
            <a href="#kontakt" class="text-[var(--senec-turquoise)] font-bold hover:underline">Störung melden →</a>
          </div>
        </div>
      </div>
    </section>

    <!-- Why Clean Section -->
    <section class="py-20 bg-gray-50">
      <div class="container-custom mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
          <div class="order-2 md:order-1">
            <h2 class="text-3xl font-bold text-[var(--senec-blue)] mb-6">Warum Reinigung so wichtig ist</h2>
            <p class="text-gray-600 mb-6 leading-relaxed">
              Viele Anlagenbesitzer glauben, der Regen wäscht die Module sauber. Das stimmt leider nur bedingt. 
              Hartnäckiger Schmutz setzt sich vor allem an den Rändern und in den Ecken fest.
            </p>
            <p class="text-gray-600 mb-6 leading-relaxed">
              Dort bilden sich oft sogenannte "Hotspots" – Bereiche, die sich stark erhitzen und die Module dauerhaft beschädigen können. 
              Eine regelmäßige Reinigung schützt also nicht nur den Ertrag, sondern auch Ihre Investition.
            </p>
            <div class="bg-white p-6 rounded-lg border-l-4 border-[var(--senec-yellow)] shadow-sm">
              <p class="font-bold text-[var(--senec-blue)]">Unser Tipp:</p>
              <p class="text-sm text-gray-600 mt-1">Lassen Sie Ihre Anlage alle 2-3 Jahre professionell prüfen und bei Bedarf reinigen.</p>
            </div>
          </div>
          <div class="order-1 md:order-2 h-80 bg-gray-200 rounded-xl overflow-hidden relative">
              <picture>
                <source srcset="/images/installation.webp" type="image/webp">
                <img src="/images/installation.png" 
                     alt="PV Reinigung Vorher Nachher" 
                     class="w-full h-full object-cover"
                     width="1226"
                     height="1143"
                     loading="lazy">
              </picture>
             <div class="absolute bottom-4 right-4 bg-white/90 px-4 py-2 rounded text-xs font-bold shadow-sm">Symbolbild Reinigung</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Form -->
    <section id="kontakt" class="py-20 bg-white">
      <div class="container-custom mx-auto max-w-2xl">
        <h2 class="text-3xl font-bold text-[var(--senec-blue)] mb-8 text-center">Service-Anfrage stellen</h2>
        
        <form class="space-y-6 bg-gray-50 p-8 rounded-xl border border-gray-100">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Vorname</label>
              <input type="text" class="w-full px-4 py-2 border border-gray-300 rounded focus:ring-[var(--senec-blue)] focus:border-[var(--senec-blue)]" />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Nachname</label>
              <input type="text" class="w-full px-4 py-2 border border-gray-300 rounded focus:ring-[var(--senec-blue)] focus:border-[var(--senec-blue)]" />
            </div>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">E-Mail Adresse</label>
            <input type="email" class="w-full px-4 py-2 border border-gray-300 rounded focus:ring-[var(--senec-blue)] focus:border-[var(--senec-blue)]" />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Worum geht es?</label>
            <select class="w-full px-4 py-2 border border-gray-300 rounded focus:ring-[var(--senec-blue)] focus:border-[var(--senec-blue)]">
              <option>Wartungstermin vereinbaren</option>
              <option>Reinigung anfragen</option>
              <option>Störung / Reparatur</option>
              <option>Sonstiges</option>
            </select>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Nachricht</label>
            <textarea rows="4" class="w-full px-4 py-2 border border-gray-300 rounded focus:ring-[var(--senec-blue)] focus:border-[var(--senec-blue)]"></textarea>
          </div>

          <button type="submit" class="btn-primary w-full">Anfrage absenden</button>
        </form>
      </div>
    </section>

  </main>
  
  <Footer />
</Layout>
