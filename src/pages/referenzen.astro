---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const pageTitle = "Referenzen Photovoltaik Leipzig | Zufriedene Kunden";
const pageDescription = "Schauen Sie sich unsere realisierten Solar-Projekte in Leipzig und Umgebung an. Echte Anlagen, echte Ergebnisse.";
---

<Layout title={pageTitle} description={pageDescription}>
  <Header />
  
  <main>
    <section class="bg-[var(--senec-blue)] text-white py-20">
      <div class="container-custom mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Unsere Projekte</h1>
        <p class="text-xl text-gray-300 max-w-2xl mx-auto">
          Über 500 realisierte Anlagen in Leipzig und Mitteldeutschland sprechen für sich. 
          Hier finden Sie eine Auswahl unserer Arbeiten.
        </p>
      </div>
    </section>

    <section class="py-20 bg-gray-50">
      <div class="container-custom mx-auto">
        
        <!-- Filter (Visual only for now) -->
        <div class="flex justify-center gap-4 mb-12 flex-wrap">
          <button class="px-6 py-2 bg-[var(--senec-blue)] text-white rounded-full font-medium shadow-md">Alle</button>
          <button class="px-6 py-2 bg-white text-gray-600 hover:bg-gray-100 rounded-full font-medium border border-gray-200 transition-colors">Privathäuser</button>
          <button class="px-6 py-2 bg-white text-gray-600 hover:bg-gray-100 rounded-full font-medium border border-gray-200 transition-colors">Gewerbe</button>
          <button class="px-6 py-2 bg-white text-gray-600 hover:bg-gray-100 rounded-full font-medium border border-gray-200 transition-colors">Speicher</button>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          
          <!-- Project 1 -->
          <div class="bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-xl transition-all group">
            <div class="relative h-64 overflow-hidden">
              <img src="/images/installation.png" alt="Einfamilienhaus Leipzig-Gohlis" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" loading="lazy" />
              <div class="absolute top-4 left-4 bg-[var(--senec-yellow)] text-[var(--senec-blue)] text-xs font-bold px-3 py-1 rounded uppercase">Privat</div>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-bold text-[var(--senec-blue)] mb-2">Einfamilienhaus in Gohlis</h3>
              <p class="text-gray-500 text-sm mb-4">Realisierung: März 2024</p>
              <div class="grid grid-cols-2 gap-4 text-sm text-gray-600 border-t border-gray-100 pt-4">
                <div>
                  <span class="block font-bold text-[var(--senec-blue)]">9,8 kWp</span>
                  Leistung
                </div>
                <div>
                  <span class="block font-bold text-[var(--senec-blue)]">5 kWh</span>
                  Speicher
                </div>
              </div>
            </div>
          </div>

          <!-- Project 2 -->
          <div class="bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-xl transition-all group">
            <div class="relative h-64 overflow-hidden">
              <img src="/images/installation.png" alt="Doppelhaus Markkleeberg" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" loading="lazy" />
              <div class="absolute top-4 left-4 bg-[var(--senec-yellow)] text-[var(--senec-blue)] text-xs font-bold px-3 py-1 rounded uppercase">Privat</div>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-bold text-[var(--senec-blue)] mb-2">Neubau in Markkleeberg</h3>
              <p class="text-gray-500 text-sm mb-4">Realisierung: November 2023</p>
              <div class="grid grid-cols-2 gap-4 text-sm text-gray-600 border-t border-gray-100 pt-4">
                <div>
                  <span class="block font-bold text-[var(--senec-blue)]">12,4 kWp</span>
                  Leistung
                </div>
                <div>
                  <span class="block font-bold text-[var(--senec-blue)]">10 kWh</span>
                  Speicher
                </div>
              </div>
            </div>
          </div>

          <!-- Project 3 -->
          <div class="bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-xl transition-all group">
            <div class="relative h-64 overflow-hidden">
              <img src="/images/installation.png" alt="Gewerbehalle Plagwitz" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" loading="lazy" />
              <div class="absolute top-4 left-4 bg-[var(--senec-turquoise)] text-white text-xs font-bold px-3 py-1 rounded uppercase">Gewerbe</div>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-bold text-[var(--senec-blue)] mb-2">Lagerhalle in Plagwitz</h3>
              <p class="text-gray-500 text-sm mb-4">Realisierung: August 2023</p>
              <div class="grid grid-cols-2 gap-4 text-sm text-gray-600 border-t border-gray-100 pt-4">
                <div>
                  <span class="block font-bold text-[var(--senec-blue)]">85 kWp</span>
                  Leistung
                </div>
                <div>
                  <span class="block font-bold text-[var(--senec-blue)]">Ohne</span>
                  Speicher
                </div>
              </div>
            </div>
          </div>

           <!-- Project 4 -->
           <div class="bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-xl transition-all group">
            <div class="relative h-64 overflow-hidden">
              <img src="/images/installation.png" alt="Mehrfamilienhaus Connewitz" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" loading="lazy" />
              <div class="absolute top-4 left-4 bg-[var(--senec-yellow)] text-[var(--senec-blue)] text-xs font-bold px-3 py-1 rounded uppercase">Privat</div>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-bold text-[var(--senec-blue)] mb-2">Sanierung in Connewitz</h3>
              <p class="text-gray-500 text-sm mb-4">Realisierung: Juni 2023</p>
              <div class="grid grid-cols-2 gap-4 text-sm text-gray-600 border-t border-gray-100 pt-4">
                <div>
                  <span class="block font-bold text-[var(--senec-blue)]">7,6 kWp</span>
                  Leistung
                </div>
                <div>
                  <span class="block font-bold text-[var(--senec-blue)]">2.5 kWh</span>
                  Speicher
                </div>
              </div>
            </div>
          </div>

          <!-- Project 5 -->
          <div class="bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-xl transition-all group">
            <div class="relative h-64 overflow-hidden">
              <img src="/images/installation.png" alt="Bürogebäude Zentrum" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" loading="lazy" />
              <div class="absolute top-4 left-4 bg-[var(--senec-turquoise)] text-white text-xs font-bold px-3 py-1 rounded uppercase">Gewerbe</div>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-bold text-[var(--senec-blue)] mb-2">Bürokomplex Zentrum-Süd</h3>
              <p class="text-gray-500 text-sm mb-4">Realisierung: Mai 2023</p>
              <div class="grid grid-cols-2 gap-4 text-sm text-gray-600 border-t border-gray-100 pt-4">
                <div>
                  <span class="block font-bold text-[var(--senec-blue)]">42 kWp</span>
                  Leistung
                </div>
                <div>
                  <span class="block font-bold text-[var(--senec-blue)]">22 kW</span>
                  Wallboxen
                </div>
              </div>
            </div>
          </div>

          <!-- Project 6 -->
          <div class="bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-xl transition-all group">
            <div class="relative h-64 overflow-hidden">
              <img src="/images/installation.png" alt="Einfamilienhaus Taucha" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" loading="lazy" />
              <div class="absolute top-4 left-4 bg-[var(--senec-yellow)] text-[var(--senec-blue)] text-xs font-bold px-3 py-1 rounded uppercase">Privat</div>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-bold text-[var(--senec-blue)] mb-2">Neubau in Taucha</h3>
              <p class="text-gray-500 text-sm mb-4">Realisierung: April 2023</p>
              <div class="grid grid-cols-2 gap-4 text-sm text-gray-600 border-t border-gray-100 pt-4">
                <div>
                  <span class="block font-bold text-[var(--senec-blue)]">15 kWp</span>
                  Leistung
                </div>
                <div>
                  <span class="block font-bold text-[var(--senec-blue)]">10 kWh</span>
                  Speicher
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
    </section>

    <!-- Map Placeholder -->
    <section class="py-20 bg-white">
      <div class="container-custom mx-auto text-center">
        <h2 class="text-3xl font-bold text-[var(--senec-blue)] mb-8">Wir sind in Ihrer Nähe</h2>
        <div class="bg-gray-100 rounded-xl h-96 w-full flex items-center justify-center text-gray-400 border border-gray-200">
          <div class="text-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto mb-4 opacity-50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0121 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
            </svg>
            <p>Interaktive Karte der Referenzanlagen</p>
          </div>
        </div>
      </div>
    </section>

  </main>
  
  <Footer />
</Layout>
