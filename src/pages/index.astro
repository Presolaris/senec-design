---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SolarCalculator from '../components/SolarCalculator';

// Images would normally be imported or referenced directly
const heroImage = "/images/hero-home.png";
---

<Layout title="Photovoltaik Leipzig | Leipzig Photovoltaik-Design">
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="relative bg-[var(--senec-blue)] text-white overflow-hidden">
      <div class="absolute inset-0 z-0">
        <picture>
          <source srcset="/images/hero-home.webp" type="image/webp">
          <source srcset="/images/hero-home.png" type="image/png">
          <img src="/images/hero-home.webp" 
               alt="Photovoltaik Anlage auf Hausdach" 
               class="w-full h-full object-cover opacity-40"
               fetchpriority="high"
               width="1920"
               height="1080"
               loading="eager">
        </picture>
        <div class="absolute inset-0 bg-gradient-to-r from-[var(--senec-blue)]/90 to-transparent"></div>
      </div>
      
      <div class="container-custom mx-auto relative z-10 py-24 md:py-32 lg:py-40">
        <div class="max-w-2xl">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight mb-6">
            Ihre Unabhängigkeit beginnt <span class="text-[var(--senec-turquoise)]">hier.</span>
          </h1>
          <p class="text-xl md:text-2xl mb-8 text-gray-200 leading-relaxed">
            Premium Photovoltaik-Lösungen für Leipzig und Umgebung. 
            Nachhaltig, effizient und im modernen Design.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="#rechner" class="btn-accent text-center">
              Ersparnis berechnen
            </a>
            <a href="/kontakt" class="btn-secondary bg-transparent text-white border-white hover:bg-white hover:text-[var(--senec-blue)] text-center">
              Beratungstermin
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Solar Calculator Section (Full Width) -->
    <section id="rechner" class="py-20 bg-gray-50">
      <div class="container-custom mx-auto mb-12 text-center">
         <h2 class="text-3xl md:text-4xl font-bold text-[var(--senec-blue)] mb-4">Lohnt sich Photovoltaik für Sie?</h2>
         <p class="text-lg text-gray-600 max-w-3xl mx-auto">Finden Sie es in wenigen Sekunden heraus. Unser Rechner gibt Ihnen eine erste Einschätzung zu Ertrag und Autarkie.</p>
      </div>
      
      <div class="w-full px-4 md:px-0 max-w-[90%] mx-auto">
        <SolarCalculator client:visible />
      </div>
    </section>

    <!-- Products Section (Split Screen) -->
    <section id="produkte">
      <!-- PV System -->
      <div class="grid grid-cols-1 md:grid-cols-2">
        <div class="bg-gray-100 h-96 md:h-auto relative group overflow-hidden">
          <picture>
            <source srcset="/images/installation.webp" type="image/webp">
            <source srcset="/images/installation.png" type="image/png">
            <img src="/images/installation.webp" 
                 alt="PV Installation" 
                 class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                 width="1226"
                 height="1143"
                 loading="lazy">
          </picture>
        </div>
        <div class="bg-white p-12 md:p-20 flex flex-col justify-center">
          <h3 class="text-2xl md:text-3xl font-bold text-[var(--senec-blue)] mb-6">Photovoltaik-Anlagen</h3>
          <p class="text-gray-600 mb-8 leading-relaxed">
            Hochleistungsmodule, die auch bei schwachem Licht maximale Erträge liefern. 
            Perfekt abgestimmt auf Ihr Dach und Ihren Energiebedarf. Wir setzen auf Qualität, 
            die Jahrzehnte hält.
          </p>
          <a href="/privat" class="text-[var(--senec-turquoise)] font-bold uppercase tracking-wider hover:text-[var(--senec-blue)] transition-colors flex items-center gap-2">
            Mehr erfahren 
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>

      <!-- Battery Storage -->
      <div class="grid grid-cols-1 md:grid-cols-2">
        <div class="bg-[var(--senec-blue)] p-12 md:p-20 flex flex-col justify-center order-2 md:order-1 text-white">
          <h3 class="text-2xl md:text-3xl font-bold mb-6 text-[var(--senec-yellow)]">Stromspeicher</h3>
          <p class="text-gray-300 mb-8 leading-relaxed">
            Machen Sie sich unabhängig von steigenden Strompreisen. Speichern Sie Ihren 
            Sonnenstrom für die Nacht oder bewölkte Tage. Unsere Speicherlösungen sind 
            intelligent, langlebig und modular erweiterbar.
          </p>
          <a href="/privat" class="text-white font-bold uppercase tracking-wider hover:text-[var(--senec-turquoise)] transition-colors flex items-center gap-2">
            Speicher entdecken
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
        <div class="bg-gray-100 h-96 md:h-auto relative group overflow-hidden order-1 md:order-2">
          <picture>
            <source srcset="/images/battery-storage.webp" type="image/webp">
            <source srcset="/images/battery-storage.png" type="image/png">
            <img src="/images/battery-storage.webp" 
                 alt="Stromspeicher" 
                 class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                 width="1226"
                 height="1143"
                 loading="lazy">
          </picture>
        </div>
      </div>
      
      <!-- Wallbox -->
      <div class="grid grid-cols-1 md:grid-cols-2">
        <div class="bg-gray-100 h-96 md:h-auto relative group overflow-hidden">
          <picture>
            <source srcset="/images/wallbox.webp" type="image/webp">
            <source srcset="/images/wallbox.png" type="image/png">
            <img src="/images/wallbox.webp" 
                 alt="Wallbox E-Auto" 
                 class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                 width="1226"
                 height="1143"
                 loading="lazy">
          </picture>
        </div>
        <div class="bg-white p-12 md:p-20 flex flex-col justify-center">
          <h3 class="text-2xl md:text-3xl font-bold text-[var(--senec-blue)] mb-6">E-Mobilität</h3>
          <p class="text-gray-600 mb-8 leading-relaxed">
            Tanken Sie Sonne. Mit einer eigenen Wallbox laden Sie Ihr E-Auto bequem, 
            schnell und kostengünstig mit dem eigenen Solarstrom. Intelligentes 
            Lademanagement inklusive.
          </p>
          <a href="/wallbox" class="text-[var(--senec-turquoise)] font-bold uppercase tracking-wider hover:text-[var(--senec-blue)] transition-colors flex items-center gap-2">
            Ladelösungen
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- Solarmanager Teaser -->
    <section class="py-24 bg-[var(--senec-blue)] text-white relative overflow-hidden">
      <div class="absolute inset-0 opacity-10">
        <svg class="h-full w-full" viewBox="0 0 100 100" preserveAspectRatio="none">
          <path d="M0 100 L100 0 L100 100 Z" fill="white" />
        </svg>
      </div>
      
      <div class="container-custom mx-auto relative z-10 text-center">
        <h2 class="text-3xl md:text-5xl font-bold mb-6">Alles im Blick. Immer.</h2>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto mb-10 leading-relaxed">
          Mit dem Solarmanager haben Sie Ihre Energieflüsse jederzeit unter Kontrolle. 
          Optimieren Sie Ihren Eigenverbrauch und steuern Sie Ihre Geräte intelligent.
        </p>
        <a href="/privat" class="btn-accent inline-flex items-center gap-2">
          Mehr erfahren
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </section>

    <!-- CTA / Contact Section with Multi-Step Form -->
    <section id="kontakt" class="py-24 bg-[#0a1628]">
      <div class="container-custom mx-auto">
        <!-- 2-Column Layout: Benefits Left, Form Right -->
        <div class="grid lg:grid-cols-[35%_60%] gap-20 items-start">
          
          <!-- Left Column: Header & Benefits -->
          <div class="text-left">
            <h2 class="text-4xl md:text-5xl font-bold text-white mb-8 leading-tight">Bereit für Ihre eigene Energiewende?</h2>
            <p class="text-xl text-gray-300 mb-12 leading-relaxed">
              Lassen Sie uns gemeinsam herausfinden, wie viel Sie sparen können. Fordern Sie jetzt Ihr unverbindliches Angebot an oder vereinbaren Sie einen Beratungstermin.
            </p>
            
            <!-- Benefits -->
            <div class="space-y-6">
              <div class="flex items-start">
                <svg class="w-6 h-6 text-[#f5c518] mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div>
                  <h4 class="font-bold text-white mb-2 text-lg">Kostenlose Wirtschaftlichkeitsberechnung</h4>
                  <p class="text-gray-300 text-base">Individuell für Ihr Dach und Ihren Verbrauch.</p>
                </div>
              </div>
              <div class="flex items-start">
                <svg class="w-6 h-6 text-[#f5c518] mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div>
                  <h4 class="font-bold text-white mb-2 text-lg">Festpreis-Garantie</h4>
                  <p class="text-gray-300 text-base">Keine versteckten Kosten. Alles inklusive.</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Right Column: Multi-Step Form -->
          <div class="bg-white rounded-2xl p-8 md:p-12 shadow-2xl">
            <h3 class="text-2xl font-bold text-gray-900 mb-6 text-center">Angebot anfordern</h3>
            <p class="text-gray-600 text-center mb-8">In nur 3 Schritten zu Ihrem individuellen Angebot</p>
            
            <!-- Step Indicator -->
            <div class="flex justify-center mb-10">
              <div class="flex items-center space-x-4">
                <div class="flex items-center">
                  <div class="w-10 h-10 rounded-full bg-[var(--senec-turquoise)] text-white flex items-center justify-center font-bold">1</div>
                  <span class="ml-2 text-sm font-medium text-gray-900">Projekt</span>
                </div>
                <div class="w-12 h-0.5 bg-gray-300"></div>
                <div class="flex items-center">
                  <div class="w-10 h-10 rounded-full bg-gray-300 text-gray-600 flex items-center justify-center font-bold">2</div>
                  <span class="ml-2 text-sm font-medium text-gray-500">Details</span>
                </div>
                <div class="w-12 h-0.5 bg-gray-300"></div>
                <div class="flex items-center">
                  <div class="w-10 h-10 rounded-full bg-gray-300 text-gray-600 flex items-center justify-center font-bold">3</div>
                  <span class="ml-2 text-sm font-medium text-gray-500">Kontakt</span>
                </div>
              </div>
            </div>

            <!-- Form Content -->
            <form action="https://api.web3forms.com/submit" method="POST" class="space-y-8">
              <input type="hidden" name="access_key" value="431d34db-0d21-4978-a355-31b6fbaaec6e">
              <input type="hidden" name="subject" value="Neue Angebot-Anfrage von Leipzig Photovoltaik">
              <input type="hidden" name="from_name" value="Leipzig Photovoltaik Kontaktformular">
              <input type="hidden" name="redirect" value="https://senec-design.vercel.app/kontakt?success=true">
              
              <!-- Step 1: Projekttyp -->
              <div>
                <label class="block text-sm font-bold text-gray-900 mb-4">Projekttyp *</label>
                <div class="grid md:grid-cols-2 gap-4">
                  <label class="relative flex flex-col items-center p-6 border-2 border-gray-200 rounded-lg cursor-pointer hover:border-[var(--senec-turquoise)] hover:shadow-md transition-all peer-checked:border-[var(--senec-turquoise)]">
                    <input type="radio" name="projekttyp" value="Privat" class="sr-only peer" required>
                    <!-- Haus Icon -->
                    <svg class="w-12 h-12 mb-3 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                    </svg>
                    <div class="text-center">
                      <div class="font-bold text-gray-900 mb-1">Privat</div>
                      <div class="text-sm text-gray-600">Einfamilienhaus, Eigenheim</div>
                    </div>
                  </label>
                  <label class="relative flex flex-col items-center p-6 border-2 border-gray-200 rounded-lg cursor-pointer hover:border-[var(--senec-turquoise)] hover:shadow-md transition-all">
                    <input type="radio" name="projekttyp" value="Gewerbe" class="sr-only peer">
                    <!-- Fabrik Icon -->
                    <svg class="w-12 h-12 mb-3 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                    </svg>
                    <div class="text-center">
                      <div class="font-bold text-gray-900 mb-1">Gewerbe</div>
                      <div class="text-sm text-gray-600">Unternehmen, Industrie</div>
                    </div>
                  </label>
                </div>
              </div>

              <!-- Step 2: Anlagengröße -->
              <div>
                <label class="block text-sm font-bold text-gray-900 mb-4">Gewünschte Anlagengröße *</label>
                <div class="space-y-3">
                  <label class="flex items-center p-4 border-2 border-gray-200 rounded-lg cursor-pointer hover:border-[var(--senec-turquoise)] transition-colors">
                    <input type="radio" name="anlagengroesse" value="5-6 kWp" class="sr-only peer" required>
                    <div class="w-5 h-5 rounded-full border-2 border-gray-300 peer-checked:border-[var(--senec-turquoise)] peer-checked:bg-[var(--senec-turquoise)] flex items-center justify-center mr-3">
                      <div class="w-2 h-2 rounded-full bg-white opacity-0 peer-checked:opacity-100"></div>
                    </div>
                    <span class="text-gray-900">5-6 kWp (2-3 Personen, ca. 7.500-9.500€)</span>
                  </label>
                  <label class="flex items-center p-4 border-2 border-gray-200 rounded-lg cursor-pointer hover:border-[var(--senec-turquoise)] transition-colors">
                    <input type="radio" name="anlagengroesse" value="8-10 kWp" class="sr-only peer">
                    <div class="w-5 h-5 rounded-full border-2 border-gray-300 peer-checked:border-[var(--senec-turquoise)] peer-checked:bg-[var(--senec-turquoise)] flex items-center justify-center mr-3">
                      <div class="w-2 h-2 rounded-full bg-white opacity-0 peer-checked:opacity-100"></div>
                    </div>
                    <span class="text-gray-900">8-10 kWp (4-5 Personen, ca. 9.500-12.500€)</span>
                  </label>
                  <label class="flex items-center p-4 border-2 border-gray-200 rounded-lg cursor-pointer hover:border-[var(--senec-turquoise)] transition-colors">
                    <input type="radio" name="anlagengroesse" value="12-15 kWp" class="sr-only peer">
                    <div class="w-5 h-5 rounded-full border-2 border-gray-300 peer-checked:border-[var(--senec-turquoise)] peer-checked:bg-[var(--senec-turquoise)] flex items-center justify-center mr-3">
                      <div class="w-2 h-2 rounded-full bg-white opacity-0 peer-checked:opacity-100"></div>
                    </div>
                    <span class="text-gray-900">12-15 kWp (5+ Personen / Gewerbe, ca. 13.500-18.500€)</span>
                  </label>
                  <label class="flex items-center p-4 border-2 border-gray-200 rounded-lg cursor-pointer hover:border-[var(--senec-turquoise)] transition-colors">
                    <input type="radio" name="anlagengroesse" value="Individuelle Größe" class="sr-only peer">
                    <div class="w-5 h-5 rounded-full border-2 border-gray-300 peer-checked:border-[var(--senec-turquoise)] peer-checked:bg-[var(--senec-turquoise)] flex items-center justify-center mr-3">
                      <div class="w-2 h-2 rounded-full bg-white opacity-0 peer-checked:opacity-100"></div>
                    </div>
                    <span class="text-gray-900">Individuelle Größe (Beratung erforderlich)</span>
                  </label>
                </div>
              </div>

              <!-- Step 3: Zeitrahmen -->
              <div>
                <label class="block text-sm font-bold text-gray-900 mb-4">Gewünschter Zeitrahmen *</label>
                <div class="grid md:grid-cols-2 gap-3">
                  <label class="flex items-center p-4 border-2 border-gray-200 rounded-lg cursor-pointer hover:border-[var(--senec-turquoise)] transition-colors">
                    <input type="radio" name="zeitrahmen" value="Sofort" class="sr-only peer" required>
                    <div class="w-5 h-5 rounded-full border-2 border-gray-300 peer-checked:border-[var(--senec-turquoise)] peer-checked:bg-[var(--senec-turquoise)] flex items-center justify-center mr-3">
                      <div class="w-2 h-2 rounded-full bg-white opacity-0 peer-checked:opacity-100"></div>
                    </div>
                    <span class="text-gray-900">Sofort</span>
                  </label>
                  <label class="flex items-center p-4 border-2 border-gray-200 rounded-lg cursor-pointer hover:border-[var(--senec-turquoise)] transition-colors">
                    <input type="radio" name="zeitrahmen" value="1-3 Monate" class="sr-only peer">
                    <div class="w-5 h-5 rounded-full border-2 border-gray-300 peer-checked:border-[var(--senec-turquoise)] peer-checked:bg-[var(--senec-turquoise)] flex items-center justify-center mr-3">
                      <div class="w-2 h-2 rounded-full bg-white opacity-0 peer-checked:opacity-100"></div>
                    </div>
                    <span class="text-gray-900">1-3 Monate</span>
                  </label>
                  <label class="flex items-center p-4 border-2 border-gray-200 rounded-lg cursor-pointer hover:border-[var(--senec-turquoise)] transition-colors">
                    <input type="radio" name="zeitrahmen" value="3-6 Monate" class="sr-only peer">
                    <div class="w-5 h-5 rounded-full border-2 border-gray-300 peer-checked:border-[var(--senec-turquoise)] peer-checked:bg-[var(--senec-turquoise)] flex items-center justify-center mr-3">
                      <div class="w-2 h-2 rounded-full bg-white opacity-0 peer-checked:opacity-100"></div>
                    </div>
                    <span class="text-gray-900">3-6 Monate</span>
                  </label>
                  <label class="flex items-center p-4 border-2 border-gray-200 rounded-lg cursor-pointer hover:border-[var(--senec-turquoise)] transition-colors">
                    <input type="radio" name="zeitrahmen" value="Nur Informationen" class="sr-only peer">
                    <div class="w-5 h-5 rounded-full border-2 border-gray-300 peer-checked:border-[var(--senec-turquoise)] peer-checked:bg-[var(--senec-turquoise)] flex items-center justify-center mr-3">
                      <div class="w-2 h-2 rounded-full bg-white opacity-0 peer-checked:opacity-100"></div>
                    </div>
                    <span class="text-gray-900">Nur Informationen</span>
                  </label>
                </div>
              </div>

              <!-- Kontaktdaten -->
              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label for="name" class="block text-sm font-bold text-gray-900 mb-2">Name *</label>
                  <input type="text" id="name" name="name" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--senec-turquoise)] focus:border-transparent">
                </div>
                <div>
                  <label for="email" class="block text-sm font-bold text-gray-900 mb-2">E-Mail *</label>
                  <input type="email" id="email" name="email" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--senec-turquoise)] focus:border-transparent">
                </div>
              </div>

              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label for="telefon" class="block text-sm font-bold text-gray-900 mb-2">Telefon *</label>
                  <input type="tel" id="telefon" name="telefon" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--senec-turquoise)] focus:border-transparent">
                </div>
                <div>
                  <label for="plz" class="block text-sm font-bold text-gray-900 mb-2">PLZ / Ort *</label>
                  <input type="text" id="plz" name="plz" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--senec-turquoise)] focus:border-transparent">
                </div>
              </div>

              <div>
                <label for="nachricht" class="block text-sm font-bold text-gray-900 mb-2">Nachricht (optional)</label>
                <textarea id="nachricht" name="nachricht" rows="4" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--senec-turquoise)] focus:border-transparent"></textarea>
              </div>

              <!-- Honeypot Spam Protection -->
              <input type="checkbox" name="botcheck" class="hidden" style="display: none;">

              <!-- Submit Button -->
              <div class="text-center">
                <button type="submit" class="bg-[#f5c518] text-[#0a1628] font-bold px-12 py-4 rounded-lg hover:bg-yellow-400 transition-colors text-lg">
                  Angebot anfordern
                </button>
                <p class="text-sm text-gray-500 mt-4">Kostenlos & unverbindlich</p>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>
