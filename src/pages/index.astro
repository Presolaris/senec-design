---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';


// Images would normally be imported or referenced directly
const heroImage = "/images/hero-home.png";
---

<Layout 
  title="Photovoltaik Leipzig" 
  description="Premium Photovoltaik-Lösungen in Leipzig: Solaranlagen, Stromspeicher & Wallboxen. Nachhaltig, effizient und im modernen SENEC-Design. Jetzt beraten lassen!"
  ogImage="/images/hero-home.png"
  canonical="https://leipzig-photovoltaik.de/"
>
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="relative bg-[var(--senec-blue)] text-white overflow-hidden">
      <div class="absolute inset-0 z-0">
        <img src={heroImage} alt="Photovoltaik Anlage auf Hausdach" class="w-full h-full object-cover opacity-40" loading="eager" fetchpriority="high" />
        <div class="absolute inset-0 bg-gradient-to-r from-[var(--senec-blue)]/90 to-transparent"></div>
      </div>
      
      <div class="container-custom mx-auto relative z-10 py-24 md:py-32 lg:py-40">
        <div class="max-w-2xl">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight mb-6">
            Ihre Unabhängigkeit beginnt <span class="text-[var(--senec-turquoise)]">hier.</span>
          </h1>
          <p class="text-xl md:text-2xl mb-8 text-gray-200 leading-relaxed">
            Premium Photovoltaik-Lösungen für Leipzig und Umgebung. 
            Nachhaltig, effizient und im modernen Design.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="#rechner" class="btn-accent text-center">
              Ersparnis berechnen
            </a>
            <a href="/kontakt.html" class="btn-secondary bg-transparent text-white border-white hover:bg-white hover:text-[var(--senec-blue)] text-center">
              Beratungstermin
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Solar Calculator Section (Full Width) -->
    <section id="rechner" class="py-20 bg-gray-50">
      <div class="container-custom mx-auto mb-12 text-center">
         <h2 class="text-3xl md:text-4xl font-bold text-[var(--senec-blue)] mb-4">Lohnt sich Photovoltaik für Sie?</h2>
         <p class="text-lg text-gray-600 max-w-3xl mx-auto">Finden Sie es in wenigen Sekunden heraus. Unser Rechner gibt Ihnen eine erste Einschätzung zu Ertrag und Autarkie.</p>
      </div>
      
      <div class="w-full px-4 md:px-0 max-w-4xl mx-auto">
        <!-- Solarrechner -->
        <div class="bg-white rounded-2xl shadow-lg p-8 md:p-12 border border-gray-100">
          <form id="solarrechner" class="space-y-8">
            <!-- Dachfläche -->
            <div>
              <label class="block text-lg font-semibold text-[var(--senec-blue)] mb-3">Verfügbare Dachfläche</label>
              <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
                <button type="button" data-value="30" class="dach-option px-4 py-3 border-2 border-gray-200 rounded-lg hover:border-[var(--senec-turquoise)] transition-colors text-center font-medium">30 m²</button>
                <button type="button" data-value="50" class="dach-option px-4 py-3 border-2 border-gray-200 rounded-lg hover:border-[var(--senec-turquoise)] transition-colors text-center font-medium">50 m²</button>
                <button type="button" data-value="80" class="dach-option px-4 py-3 border-2 border-gray-200 rounded-lg hover:border-[var(--senec-turquoise)] transition-colors text-center font-medium">80 m²</button>
                <button type="button" data-value="120" class="dach-option px-4 py-3 border-2 border-gray-200 rounded-lg hover:border-[var(--senec-turquoise)] transition-colors text-center font-medium">120+ m²</button>
              </div>
            </div>
            
            <!-- Stromverbrauch -->
            <div>
              <label class="block text-lg font-semibold text-[var(--senec-blue)] mb-3">Jährlicher Stromverbrauch</label>
              <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
                <button type="button" data-value="2500" class="strom-option px-4 py-3 border-2 border-gray-200 rounded-lg hover:border-[var(--senec-turquoise)] transition-colors text-center font-medium">2.500 kWh</button>
                <button type="button" data-value="4000" class="strom-option px-4 py-3 border-2 border-gray-200 rounded-lg hover:border-[var(--senec-turquoise)] transition-colors text-center font-medium">4.000 kWh</button>
                <button type="button" data-value="6000" class="strom-option px-4 py-3 border-2 border-gray-200 rounded-lg hover:border-[var(--senec-turquoise)] transition-colors text-center font-medium">6.000 kWh</button>
                <button type="button" data-value="10000" class="strom-option px-4 py-3 border-2 border-gray-200 rounded-lg hover:border-[var(--senec-turquoise)] transition-colors text-center font-medium">10.000+ kWh</button>
              </div>
            </div>
            
            <!-- Speicher -->
            <div>
              <label class="block text-lg font-semibold text-[var(--senec-blue)] mb-3">Stromspeicher gewünscht?</label>
              <div class="grid grid-cols-2 gap-3">
                <button type="button" data-value="ja" class="speicher-option px-4 py-3 border-2 border-gray-200 rounded-lg hover:border-[var(--senec-turquoise)] transition-colors text-center font-medium">Ja, mit Speicher</button>
                <button type="button" data-value="nein" class="speicher-option px-4 py-3 border-2 border-gray-200 rounded-lg hover:border-[var(--senec-turquoise)] transition-colors text-center font-medium">Nein, ohne Speicher</button>
              </div>
            </div>
            
            <!-- Ergebnis -->
            <div id="rechner-ergebnis" class="hidden bg-gradient-to-r from-[var(--senec-blue)] to-[var(--senec-turquoise)] rounded-xl p-8 text-white">
              <h3 class="text-2xl font-bold mb-4">Ihre geschätzte Ersparnis</h3>
              <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
                <div>
                  <p class="text-4xl font-bold" id="ersparnis-wert">€ 1.200</p>
                  <p class="text-sm opacity-80">Ersparnis pro Jahr</p>
                </div>
                <div>
                  <p class="text-4xl font-bold" id="autarkie-wert">65%</p>
                  <p class="text-sm opacity-80">Autarkiegrad</p>
                </div>
                <div>
                  <p class="text-4xl font-bold" id="co2-wert">3,2 t</p>
                  <p class="text-sm opacity-80">CO₂ Einsparung/Jahr</p>
                </div>
              </div>
              <div class="mt-6 text-center">
                <a href="/kontakt.html" class="inline-block bg-white text-[var(--senec-blue)] font-bold px-8 py-3 rounded-lg hover:bg-gray-100 transition-colors">Jetzt Angebot anfordern</a>
              </div>
            </div>
          </form>
        </div>
      </div>
      
      <script>
        // Solarrechner Interaktivität
        document.addEventListener('DOMContentLoaded', function() {
          let dachflaeche = 0;
          let stromverbrauch = 0;
          let speicher = '';
          
          function updateSelection(buttons, value, className) {
            buttons.forEach(btn => {
              btn.classList.remove('border-teal-500', 'bg-teal-50', 'border-2');
              btn.style.borderColor = '';
              btn.style.backgroundColor = '';
              if (btn.dataset.value === value) {
                btn.classList.add('border-2');
                btn.style.borderColor = '#00a0a0';
                btn.style.backgroundColor = 'rgba(0, 160, 160, 0.1)';
              }
            });
          }
          
          function berechneErgebnis() {
            if (dachflaeche && stromverbrauch && speicher) {
              // Einfache Berechnung
              const kwp = Math.min(dachflaeche * 0.2, 30); // ca. 200W pro m²
              const ertrag = kwp * 950; // 950 kWh pro kWp in Leipzig
              const eigenverbrauch = speicher === 'ja' ? 0.7 : 0.3;
              const strompreis = 0.35; // €/kWh
              const ersparnis = Math.round(ertrag * eigenverbrauch * strompreis);
              const autarkie = Math.min(Math.round((ertrag * eigenverbrauch / stromverbrauch) * 100), 95);
              const co2 = (ertrag * 0.4 / 1000).toFixed(1); // 400g CO2 pro kWh
              
              document.getElementById('ersparnis-wert').textContent = '€ ' + ersparnis.toLocaleString('de-DE');
              document.getElementById('autarkie-wert').textContent = autarkie + '%';
              document.getElementById('co2-wert').textContent = co2 + ' t';
              document.getElementById('rechner-ergebnis').classList.remove('hidden');
            }
          }
          
          document.querySelectorAll('.dach-option').forEach(btn => {
            btn.addEventListener('click', function() {
              dachflaeche = parseInt(this.dataset.value);
              updateSelection(document.querySelectorAll('.dach-option'), this.dataset.value);
              berechneErgebnis();
            });
          });
          
          document.querySelectorAll('.strom-option').forEach(btn => {
            btn.addEventListener('click', function() {
              stromverbrauch = parseInt(this.dataset.value);
              updateSelection(document.querySelectorAll('.strom-option'), this.dataset.value);
              berechneErgebnis();
            });
          });
          
          document.querySelectorAll('.speicher-option').forEach(btn => {
            btn.addEventListener('click', function() {
              speicher = this.dataset.value;
              updateSelection(document.querySelectorAll('.speicher-option'), this.dataset.value);
              berechneErgebnis();
            });
          });
        });
      </script>
    </section>

    <!-- Products Section (Split Screen) -->
    <section id="produkte">
      <!-- PV System -->
      <div class="grid grid-cols-1 md:grid-cols-2">
        <div class="bg-gray-100 h-96 md:h-auto relative group overflow-hidden">
          <img src="/images/installation.png" alt="PV Installation" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" loading="lazy" loading="lazy" />
        </div>
        <div class="bg-white p-12 md:p-20 flex flex-col justify-center">
          <h3 class="text-2xl md:text-3xl font-bold text-[var(--senec-blue)] mb-6">Photovoltaik-Anlagen</h3>
          <p class="text-gray-600 mb-8 leading-relaxed">
            Hochleistungsmodule, die auch bei schwachem Licht maximale Erträge liefern. 
            Perfekt abgestimmt auf Ihr Dach und Ihren Energiebedarf. Wir setzen auf Qualität, 
            die Jahrzehnte hält.
          </p>
          <a href="/privat.html" class="text-[var(--senec-turquoise)] font-bold uppercase tracking-wider hover:text-[var(--senec-blue)] transition-colors flex items-center gap-2">
            Mehr erfahren 
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>

      <!-- Battery Storage -->
      <div class="grid grid-cols-1 md:grid-cols-2">
        <div class="bg-[var(--senec-blue)] p-12 md:p-20 flex flex-col justify-center order-2 md:order-1 text-white">
          <h3 class="text-2xl md:text-3xl font-bold mb-6 text-[var(--senec-yellow)]">Stromspeicher</h3>
          <p class="text-gray-300 mb-8 leading-relaxed">
            Machen Sie sich unabhängig von steigenden Strompreisen. Speichern Sie Ihren 
            Sonnenstrom für die Nacht oder bewölkte Tage. Unsere Speicherlösungen sind 
            intelligent, langlebig und modular erweiterbar.
          </p>
          <a href="/privat.html" class="text-white font-bold uppercase tracking-wider hover:text-[var(--senec-turquoise)] transition-colors flex items-center gap-2">
            Speicher entdecken
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
        <div class="bg-gray-100 h-96 md:h-auto relative group overflow-hidden order-1 md:order-2">
          <img src="/images/battery-storage.png" alt="Stromspeicher" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" loading="lazy" loading="lazy" />
        </div>
      </div>
      
      <!-- Wallbox -->
      <div class="grid grid-cols-1 md:grid-cols-2">
        <div class="bg-gray-100 h-96 md:h-auto relative group overflow-hidden">
          <img src="/images/wallbox.png" alt="Wallbox E-Auto" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" loading="lazy" loading="lazy" />
        </div>
        <div class="bg-white p-12 md:p-20 flex flex-col justify-center">
          <h3 class="text-2xl md:text-3xl font-bold text-[var(--senec-blue)] mb-6">E-Mobilität</h3>
          <p class="text-gray-600 mb-8 leading-relaxed">
            Tanken Sie Sonne. Mit einer eigenen Wallbox laden Sie Ihr E-Auto bequem, 
            schnell und kostengünstig mit dem eigenen Solarstrom. Intelligentes 
            Lademanagement inklusive.
          </p>
          <a href="/wallbox.html" class="text-[var(--senec-turquoise)] font-bold uppercase tracking-wider hover:text-[var(--senec-blue)] transition-colors flex items-center gap-2">
            Ladelösungen
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- Solarmanager Teaser -->
    <section class="py-24 bg-[var(--senec-blue)] text-white relative overflow-hidden">
      <div class="absolute inset-0 opacity-10">
        <svg class="h-full w-full" viewBox="0 0 100 100" preserveAspectRatio="none">
          <path d="M0 100 L100 0 L100 100 Z" fill="white" />
        </svg>
      </div>
      
      <div class="container-custom mx-auto relative z-10 text-center">
        <h2 class="text-3xl md:text-5xl font-bold mb-6">Alles im Blick. Immer.</h2>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto mb-10 leading-relaxed">
          Mit dem Solarmanager haben Sie Ihre Energieflüsse jederzeit unter Kontrolle. 
          Optimieren Sie Ihren Eigenverbrauch und steuern Sie Ihre Geräte intelligent.
        </p>
        <a href="/privat.html" class="btn-accent inline-flex items-center gap-2">
          Mehr erfahren
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </section>

    <!-- CTA / Contact Section -->
    <section id="kontakt" class="py-24 bg-white">
      <div class="container-custom mx-auto">
        <div class="bg-gray-50 rounded-2xl p-8 md:p-16 border border-gray-100 shadow-sm text-center max-w-4xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-bold text-[var(--senec-blue)] mb-6">Bereit für Ihre Energiewende?</h2>
          <p class="text-lg text-gray-600 mb-10">
            Lassen Sie uns gemeinsam Ihr Projekt realisieren. Fordern Sie jetzt Ihr 
            unverbindliches Angebot an oder vereinbaren Sie einen Beratungstermin.
          </p>
          <div class="flex flex-col sm:flex-row justify-center gap-4">
             <a href="/kontakt.html" class="btn-primary w-full sm:w-auto px-12">
               Zum Kontaktformular
             </a>
             <a href="tel:+4934112345678" class="btn-secondary w-full sm:w-auto px-12">
               Anrufen: 0341 123 456 78
             </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>
