---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';

const breadcrumbItems = [
  { label: 'Home', href: '/' },
  { label: 'Standorte', href: '/standorte' },
  { label: 'Anhalt Bitterfeld' }
];

const pageTitle = "Photovoltaik Anhalt-Bitterfeld | Solaranlage Bitterfeld-Wolfen, Dessau, Köthen - Presolaris";
const pageDescription = "Photovoltaik in Anhalt-Bitterfeld ➤ Bitterfeld-Wolfen, Dessau-Roßlau, Köthen ✓ Lokaler Fachbetrieb ✓ Kostenlose Vor-Ort-Beratung ☎ 0341 98 99 03 91";
---

<Layout title={pageTitle} description={pageDescription}>
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "LocalBusiness",
    "@id": "https://leipzig-photovoltaik.de/standorte/anhalt-bitterfeld#business",
    "name": "Presolaris - Photovoltaik Anhalt-Bitterfeld",
    "image": "https://leipzig-photovoltaik.de/images/logo.webp",
    "description": "Photovoltaik-Fachbetrieb in Anhalt-Bitterfeld für Solaranlagen, Stromspeicher und Wallboxen. Kostenlose Beratung und Installation aus einer Hand.",
    "url": "https://leipzig-photovoltaik.de/standorte/anhalt-bitterfeld",
    "telephone": "+49-341-98990391",
    "email": "info@leipzig-photovoltaik.de",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "Musterstraße 1",
      "addressLocality": "Bitterfeld-Wolfen",
      "postalCode": "06749",
      "addressRegion": "Sachsen-Anhalt",
      "addressCountry": "DE"
    },
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": 51.6236,
      "longitude": 12.3297
    },
    "areaServed": [
      {
        "@type": "City",
        "name": "Bitterfeld-Wolfen"
      },
      {
        "@type": "City",
        "name": "Dessau-Roßlau"
      },
      {
        "@type": "City",
        "name": "Köthen"
      },
      {
        "@type": "City",
        "name": "Zerbst"
      }
    ],
    "priceRange": "€€€",
    "openingHoursSpecification": [
      {
        "@type": "OpeningHoursSpecification",
        "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
        "opens": "08:00",
        "closes": "18:00"
      }
    ],
    "sameAs": [
      "https://www.facebook.com/presolaris",
      "https://www.instagram.com/presolaris"
    ]
  })} />
  <Header />
  <Breadcrumb items={breadcrumbItems} />
  
  <main>
    <!-- Hero Section -->
    <section class="relative bg-[var(--senec-blue)] text-white py-20 md:py-32 overflow-hidden">
      <div class="absolute inset-0 z-0">
        <img src="/images/hero-home.png" alt="Photovoltaik Anhalt-Bitterfeld" class="w-full h-full object-cover opacity-30" />
        <div class="absolute inset-0 bg-gradient-to-r from-[var(--senec-blue)] to-transparent"></div>
      </div>
      
      <div class="container-custom mx-auto relative z-10">
        <div class="max-w-3xl">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight mb-6">
            Photovoltaik Anhalt-Bitterfeld – <br/>
            <span class="text-[var(--senec-turquoise)]">Solaranlagen für Industrie & Privat</span>
          </h1>
          <p class="text-xl text-gray-200 mb-8 leading-relaxed">
            Ihr lokaler Fachbetrieb für Photovoltaik, Stromspeicher und Wallboxen in Bitterfeld-Wolfen, Dessau-Roßlau, Köthen und Umgebung. 
            Von der Planung bis zur Inbetriebnahme – alles aus einer Hand.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="/#rechner" class="btn-accent text-center">
              Sparpotenzial berechnen
            </a>
            <a href="/kontakt" class="btn-secondary bg-transparent text-white border-white hover:bg-white hover:text-[var(--senec-blue)] text-center">
              Kostenlose Beratung
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Warum Anhalt-Bitterfeld Section -->
    <section class="py-20 bg-white">
      <div class="container-custom mx-auto">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-[var(--senec-blue)] mb-4">Warum Photovoltaik in Anhalt-Bitterfeld?</h2>
          <p class="text-gray-600">
            Anhalt-Bitterfeld bietet als Chemiestandort ideale Bedingungen für Gewerbe-Solaranlagen – nutzen Sie die Sonnenenergie für Ihr Unternehmen oder Zuhause.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Benefit 1 -->
          <div class="bg-gray-50 p-8 rounded-xl border border-gray-100 hover:shadow-md transition-shadow">
            <div class="w-12 h-12 bg-[var(--senec-yellow)] rounded-lg flex items-center justify-center mb-6">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-[var(--senec-blue)] mb-3">1.700 Sonnenstunden/Jahr</h3>
            <p class="text-gray-600 leading-relaxed">
              Anhalt-Bitterfeld gehört zu den sonnenreichsten Regionen Sachsen-Anhalts. Ideale Voraussetzungen für hohe Solarerträge.
            </p>
          </div>

          <!-- Benefit 2 -->
          <div class="bg-gray-50 p-8 rounded-xl border border-gray-100 hover:shadow-md transition-shadow">
            <div class="w-12 h-12 bg-[var(--senec-turquoise)] rounded-lg flex items-center justify-center mb-6">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-[var(--senec-blue)] mb-3">Industrie-Expertise</h3>
            <p class="text-gray-600 leading-relaxed">
              Spezialisiert auf Gewerbe- und Industrieanlagen. Wir kennen die Anforderungen energieintensiver Betriebe.
            </p>
          </div>

          <!-- Benefit 3 -->
          <div class="bg-gray-50 p-8 rounded-xl border border-gray-100 hover:shadow-md transition-shadow">
            <div class="w-12 h-12 bg-[var(--senec-blue)] rounded-lg flex items-center justify-center mb-6">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-[var(--senec-blue)] mb-3">Förderung & Finanzierung</h3>
            <p class="text-gray-600 leading-relaxed">
              Profitieren Sie von 0% MwSt. auf PV-Anlagen und speziellen Gewerbe-Förderprogrammen in Sachsen-Anhalt.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Leistungen Section -->
    <section class="py-20 bg-gray-50">
      <div class="container-custom mx-auto">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-[var(--senec-blue)] mb-4">Unsere Leistungen in Anhalt-Bitterfeld</h2>
          <p class="text-gray-600">
            Von der Beratung bis zur Wartung – wir begleiten Sie durch Ihr gesamtes Solar-Projekt.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          <a href="/privat" class="bg-white p-6 rounded-xl border border-gray-100 hover:shadow-lg transition-all hover:border-[var(--senec-turquoise)]">
            <h3 class="text-lg font-bold text-[var(--senec-blue)] mb-2">Privathaushalte</h3>
            <p class="text-gray-600 text-sm">Solaranlagen für Einfamilienhäuser und Mehrfamilienhäuser</p>
          </a>

          <a href="/gewerbe" class="bg-white p-6 rounded-xl border border-gray-100 hover:shadow-lg transition-all hover:border-[var(--senec-turquoise)]">
            <h3 class="text-lg font-bold text-[var(--senec-blue)] mb-2">Gewerbe & Industrie</h3>
            <p class="text-gray-600 text-sm">Großanlagen für Chemiebetriebe und Produktionshallen</p>
          </a>

          <a href="/stromspeicher" class="bg-white p-6 rounded-xl border border-gray-100 hover:shadow-lg transition-all hover:border-[var(--senec-turquoise)]">
            <h3 class="text-lg font-bold text-[var(--senec-blue)] mb-2">Stromspeicher</h3>
            <p class="text-gray-600 text-sm">Speicherlösungen für maximale Unabhängigkeit</p>
          </a>

          <a href="/wallbox" class="bg-white p-6 rounded-xl border border-gray-100 hover:shadow-lg transition-all hover:border-[var(--senec-turquoise)]">
            <h3 class="text-lg font-bold text-[var(--senec-blue)] mb-2">Wallbox</h3>
            <p class="text-gray-600 text-sm">E-Auto laden mit Solarstrom</p>
          </a>
        </div>
      </div>
    </section>

    <!-- Gemeinden Section -->
    <section class="py-20 bg-white">
      <div class="container-custom mx-auto">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-[var(--senec-blue)] mb-4">Photovoltaik in allen Gemeinden Anhalt-Bitterfelds</h2>
          <p class="text-gray-600">
            Wir sind im gesamten Landkreis für Sie da – von Bitterfeld-Wolfen bis Dessau-Roßlau, von Köthen bis Zerbst.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
          <!-- Bitterfeld-Wolfen -->
          <div>
            <h3 class="text-2xl font-bold text-[var(--senec-blue)] mb-4 flex items-center">
              <span class="w-8 h-8 bg-[var(--senec-turquoise)] rounded-lg flex items-center justify-center mr-3 text-white text-sm">B</span>
              Bitterfeld-Wolfen
            </h3>
            <p class="text-gray-600 mb-4 leading-relaxed">
              Als Chemiestandort bietet Bitterfeld-Wolfen großes Potenzial für Gewerbe-Solaranlagen. 
              Wir realisieren Projekte für Industrie, Mittelstand und Privathaushalte mit höchsten Sicherheitsstandards.
            </p>
            <ul class="space-y-2 text-gray-600">
              <li class="flex items-start">
                <span class="text-[var(--senec-turquoise)] mr-2">✓</span>
                <span>Bitterfeld – Industrie-PV-Anlagen</span>
              </li>
              <li class="flex items-start">
                <span class="text-[var(--senec-turquoise)] mr-2">✓</span>
                <span>Wolfen – Gewerbe-Solaranlagen</span>
              </li>
              <li class="flex items-start">
                <span class="text-[var(--senec-turquoise)] mr-2">✓</span>
                <span>Greppin – PV-Anlagen für Privat</span>
              </li>
            </ul>
          </div>

          <!-- Dessau-Roßlau -->
          <div>
            <h3 class="text-2xl font-bold text-[var(--senec-blue)] mb-4 flex items-center">
              <span class="w-8 h-8 bg-[var(--senec-yellow)] rounded-lg flex items-center justify-center mr-3 text-white text-sm">D</span>
              Dessau-Roßlau
            </h3>
            <p class="text-gray-600 mb-4 leading-relaxed">
              In der Bauhaus-Stadt Dessau-Roßlau verbinden wir moderne Architektur mit nachhaltiger Energietechnik. 
              Von historischen Gebäuden bis zu Neubauten – wir finden die optimale Solarlösung.
            </p>
            <ul class="space-y-2 text-gray-600">
              <li class="flex items-start">
                <span class="text-[var(--senec-turquoise)] mr-2">✓</span>
                <span>Dessau – Photovoltaik für Stadtgebiete</span>
              </li>
              <li class="flex items-start">
                <span class="text-[var(--senec-turquoise)] mr-2">✓</span>
                <span>Roßlau – Solaranlagen für Wohngebiete</span>
              </li>
              <li class="flex items-start">
                <span class="text-[var(--senec-turquoise)] mr-2">✓</span>
                <span>Mildensee – PV-Anlagen mit Speicher</span>
              </li>
            </ul>
          </div>

          <!-- Köthen -->
          <div>
            <h3 class="text-2xl font-bold text-[var(--senec-blue)] mb-4 flex items-center">
              <span class="w-8 h-8 bg-[var(--senec-blue)] rounded-lg flex items-center justify-center mr-3 text-white text-sm">K</span>
              Köthen & Umgebung
            </h3>
            <p class="text-gray-600 mb-4 leading-relaxed">
              Köthen und Umgebung bieten ideale Bedingungen für Solaranlagen. 
              Wir realisieren Projekte für Privathaushalte, Gewerbe und Landwirtschaft.
            </p>
            <ul class="space-y-2 text-gray-600">
              <li class="flex items-start">
                <span class="text-[var(--senec-turquoise)] mr-2">✓</span>
                <span>Köthen – Solaranlagen für Privat & Gewerbe</span>
              </li>
              <li class="flex items-start">
                <span class="text-[var(--senec-turquoise)] mr-2">✓</span>
                <span>Aken – Landwirtschaftliche PV-Anlagen</span>
              </li>
              <li class="flex items-start">
                <span class="text-[var(--senec-turquoise)] mr-2">✓</span>
                <span>Gröbzig – Photovoltaik für Einfamilienhäuser</span>
              </li>
            </ul>
          </div>

          <!-- Zerbst -->
          <div>
            <h3 class="text-2xl font-bold text-[var(--senec-blue)] mb-4 flex items-center">
              <span class="w-8 h-8 bg-[var(--senec-turquoise)]/70 rounded-lg flex items-center justify-center mr-3 text-white text-sm">Z</span>
              Zerbst & Umgebung
            </h3>
            <p class="text-gray-600 mb-4 leading-relaxed">
              In Zerbst und den umliegenden Gemeinden setzen wir auf nachhaltige Energielösungen 
              für Privathaushalte, Landwirtschaft und Gewerbe.
            </p>
            <ul class="space-y-2 text-gray-600">
              <li class="flex items-start">
                <span class="text-[var(--senec-turquoise)] mr-2">✓</span>
                <span>Zerbst – Photovoltaik für Stadtgebiete</span>
              </li>
              <li class="flex items-start">
                <span class="text-[var(--senec-turquoise)] mr-2">✓</span>
                <span>Lindau – Solaranlagen für ländliche Regionen</span>
              </li>
              <li class="flex items-start">
                <span class="text-[var(--senec-turquoise)] mr-2">✓</span>
                <span>Jüterbog – PV-Anlagen mit Wallbox</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-gradient-to-br from-[var(--senec-blue)] to-blue-900 text-white">
      <div class="container-custom mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Bereit für Ihre Solaranlage in Anhalt-Bitterfeld?</h2>
        <p class="text-xl text-gray-200 mb-8 max-w-2xl mx-auto">
          Lassen Sie sich von unseren Experten beraten. Kostenlos, unverbindlich und vor Ort.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/#rechner" class="btn-accent">
            Sparpotenzial berechnen
          </a>
          <a href="/kontakt" class="btn-secondary bg-transparent text-white border-white hover:bg-white hover:text-[var(--senec-blue)]">
            Kostenlose Beratung
          </a>
        </div>
      </div>
    </section>

  </main>
  
  <Footer />
</Layout>
