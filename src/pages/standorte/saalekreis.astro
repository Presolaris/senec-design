---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const pageTitle = "Photovoltaik Halle (Saale) & Saalekreis | Solar vom Fachbetrieb";
const pageDescription = "Photovoltaik Halle & Saalekreis ➤ Neustadt, Kröllwitz, Merseburg, Querfurt ✓ Lokaler Fachbetrieb ✓ Kostenlose Beratung ☎ Jetzt anfragen";
---

<Layout title={pageTitle} description={pageDescription}>
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "LocalBusiness",
    "@id": "https://leipzig-photovoltaik.de/standorte/saalekreis#business",
    "name": "Presolaris - Photovoltaik Halle & Saalekreis",
    "image": "https://leipzig-photovoltaik.de/images/logo.webp",
    "description": "Photovoltaik-Fachbetrieb in Halle (Saale) und Saalekreis für Solaranlagen, Stromspeicher und Wallboxen. Kostenlose Beratung und Installation.",
    "url": "https://leipzig-photovoltaik.de/standorte/saalekreis",
    "telephone": "+49-341-98990391",
    "email": "info@leipzig-photovoltaik.de",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "Musterstraße 1",
      "addressLocality": "Halle (Saale)",
      "postalCode": "06108",
      "addressRegion": "Sachsen-Anhalt",
      "addressCountry": "DE"
    },
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": 51.4825041,
      "longitude": 11.9705452
    },
    "areaServed": [
      {
        "@type": "City",
        "name": "Halle (Saale)"
      },
      {
        "@type": "Place",
        "name": "Neustadt"
      },
      {
        "@type": "Place",
        "name": "Kröllwitz"
      },
      {
        "@type": "City",
        "name": "Merseburg"
      },
      {
        "@type": "City",
        "name": "Querfurt"
      },
      {
        "@type": "Place",
        "name": "Saalekreis"
      }
    ],
    "priceRange": "€€€",
    "openingHoursSpecification": [
      {
        "@type": "OpeningHoursSpecification",
        "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
        "opens": "08:00",
        "closes": "18:00"
      }
    ],
    "sameAs": [
      "https://www.facebook.com/presolaris",
      "https://www.instagram.com/presolaris"
    ]
  })} />
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="relative bg-[var(--senec-blue)] text-white py-20 md:py-32 overflow-hidden">
      <div class="absolute inset-0 z-0">
        <img src="/images/hero-home.png" alt="Photovoltaik Halle Saalekreis" class="w-full h-full object-cover opacity-30" />
        <div class="absolute inset-0 bg-gradient-to-r from-[var(--senec-blue)] to-transparent"></div>
      </div>
      
      <div class="container-custom mx-auto relative z-10">
        <div class="max-w-3xl">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight mb-6">
            Photovoltaik Halle & Saalekreis – <br/>
            <span class="text-[var(--senec-turquoise)]">Ihr regionaler Solarexperte</span>
          </h1>
          <p class="text-xl text-gray-200 mb-8 leading-relaxed">
            Solaranlagen für Halle (Saale), Merseburg, Querfurt und den gesamten Saalekreis. 
            Persönliche Beratung, professionelle Installation, langfristige Betreuung.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="/#rechner" class="btn-accent text-center">
              Sparpotenzial berechnen
            </a>
            <a href="/kontakt.html" class="btn-secondary bg-transparent text-white border-white hover:bg-white hover:text-[var(--senec-blue)] text-center">
              Kostenlose Beratung
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Warum Halle/Saalekreis Section -->
    <section class="py-20 bg-white">
      <div class="container-custom mx-auto">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-[var(--senec-blue)] mb-4">Photovoltaik in Halle & Saalekreis</h2>
          <p class="text-gray-600">
            Die Region Halle-Saalekreis bietet mit über 1.600 Sonnenstunden pro Jahr ideale Bedingungen für Solaranlagen.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="bg-gray-50 p-8 rounded-xl border border-gray-100 hover:shadow-md transition-shadow">
            <div class="w-12 h-12 bg-[var(--senec-yellow)] rounded-lg flex items-center justify-center mb-6">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-[var(--senec-blue)] mb-3">Sonnenreichste Region</h3>
            <p class="text-gray-600 leading-relaxed">
              Sachsen-Anhalt gehört zu den sonnenreichsten Bundesländern. Optimale Erträge für Ihre Solaranlage.
            </p>
          </div>

          <div class="bg-gray-50 p-8 rounded-xl border border-gray-100 hover:shadow-md transition-shadow">
            <div class="w-12 h-12 bg-[var(--senec-turquoise)] rounded-lg flex items-center justify-center mb-6">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-[var(--senec-blue)] mb-3">Förderung Sachsen-Anhalt</h3>
            <p class="text-gray-600 leading-relaxed">
              0% MwSt. auf PV-Anlagen plus regionale Förderprogramme. Wir beraten Sie zu allen Möglichkeiten.
            </p>
          </div>

          <div class="bg-gray-50 p-8 rounded-xl border border-gray-100 hover:shadow-md transition-shadow">
            <div class="w-12 h-12 bg-[var(--senec-blue)] rounded-lg flex items-center justify-center mb-6">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-[var(--senec-blue)] mb-3">Regionaler Service</h3>
            <p class="text-gray-600 leading-relaxed">
              Kurze Anfahrtswege, schnelle Reaktionszeiten. Wir sind in 40 Minuten bei Ihnen vor Ort.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Standorte Section -->
    <section class="py-20 bg-gray-50">
      <div class="container-custom mx-auto">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-[var(--senec-blue)] mb-4">Photovoltaik in Halle & Umgebung</h2>
          <p class="text-gray-600">
            Von Halle-Neustadt bis Merseburg, von Querfurt bis Bad Dürrenberg – wir sind in der gesamten Region für Sie da.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
          <!-- Halle (Saale) -->
          <div>
            <h3 class="text-2xl font-bold text-[var(--senec-blue)] mb-4">Halle (Saale)</h3>
            <p class="text-gray-600 mb-4 leading-relaxed">
              In allen Stadtteilen von Halle installieren wir Solaranlagen – von der Altstadt bis zur Neustadt, 
              von Kröllwitz bis Trotha.
            </p>
            <ul class="space-y-2 text-gray-600">
              <li class="flex items-start">
                <span class="text-[var(--senec-turquoise)] mr-2">✓</span>
                <span>Halle-Neustadt – Photovoltaik für Wohnblöcke</span>
              </li>
              <li class="flex items-start">
                <span class="text-[var(--senec-turquoise)] mr-2">✓</span>
                <span>Halle-Kröllwitz – Solaranlagen für Villen</span>
              </li>
              <li class="flex items-start">
                <span class="text-[var(--senec-turquoise)] mr-2">✓</span>
                <span>Halle-Trotha – PV-Anlagen für Eigenheime</span>
              </li>
              <li class="flex items-start">
                <span class="text-[var(--senec-turquoise)] mr-2">✓</span>
                <span>Halle-Altstadt – Denkmalschutz-konforme Lösungen</span>
              </li>
            </ul>
          </div>

          <!-- Saalekreis -->
          <div>
            <h3 class="text-2xl font-bold text-[var(--senec-blue)] mb-4">Saalekreis</h3>
            <p class="text-gray-600 mb-4 leading-relaxed">
              Im gesamten Saalekreis sind wir Ihr Ansprechpartner für Photovoltaik – von Merseburg bis Querfurt, 
              von Bad Dürrenberg bis Landsberg.
            </p>
            <ul class="space-y-2 text-gray-600">
              <li class="flex items-start">
                <span class="text-[var(--senec-turquoise)] mr-2">✓</span>
                <span>Merseburg – Photovoltaik für Privat & Gewerbe</span>
              </li>
              <li class="flex items-start">
                <span class="text-[var(--senec-turquoise)] mr-2">✓</span>
                <span>Querfurt – Solaranlagen für Landwirtschaft</span>
              </li>
              <li class="flex items-start">
                <span class="text-[var(--senec-turquoise)] mr-2">✓</span>
                <span>Bad Dürrenberg – PV-Anlagen mit Speicher</span>
              </li>
              <li class="flex items-start">
                <span class="text-[var(--senec-turquoise)] mr-2">✓</span>
                <span>Landsberg – Photovoltaik für Eigenheime</span>
              </li>
            </ul>
          </div>
        </div>

        <!-- Weitere Standorte -->
        <div class="mt-12 bg-white p-8 rounded-xl shadow-sm">
          <h3 class="text-2xl font-bold text-[var(--senec-blue)] mb-4">Weitere Standorte im Saalekreis</h3>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <div class="text-center p-4">
              <div class="text-[var(--senec-turquoise)] font-bold">Leuna</div>
              <div class="text-gray-600 text-sm">Industrie & Gewerbe</div>
            </div>
            <div class="text-center p-4">
              <div class="text-[var(--senec-turquoise)] font-bold">Wettin-Löbejün</div>
              <div class="text-gray-600 text-sm">Privathaushalte</div>
            </div>
            <div class="text-center p-4">
              <div class="text-[var(--senec-turquoise)] font-bold">Salzatal</div>
              <div class="text-gray-600 text-sm">Landwirtschaft</div>
            </div>
            <div class="text-center p-4">
              <div class="text-[var(--senec-turquoise)] font-bold">Teutschenthal</div>
              <div class="text-gray-600 text-sm">Eigenheime</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Leistungen Section -->
    <section class="py-20 bg-white">
      <div class="container-custom mx-auto">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-[var(--senec-blue)] mb-4">Unsere Leistungen in Halle & Saalekreis</h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          <a href="/privat.html" class="bg-gray-50 p-6 rounded-xl border border-gray-100 hover:shadow-lg transition-all hover:border-[var(--senec-turquoise)]">
            <h3 class="text-lg font-bold text-[var(--senec-blue)] mb-2">Privathaushalte</h3>
            <p class="text-gray-600 text-sm">Solaranlagen für Eigenheime</p>
          </a>

          <a href="/gewerbe.html" class="bg-gray-50 p-6 rounded-xl border border-gray-100 hover:shadow-lg transition-all hover:border-[var(--senec-turquoise)]">
            <h3 class="text-lg font-bold text-[var(--senec-blue)] mb-2">Gewerbe</h3>
            <p class="text-gray-600 text-sm">Großanlagen für Unternehmen</p>
          </a>

          <a href="/stromspeicher.html" class="bg-gray-50 p-6 rounded-xl border border-gray-100 hover:shadow-lg transition-all hover:border-[var(--senec-turquoise)]">
            <h3 class="text-lg font-bold text-[var(--senec-blue)] mb-2">Stromspeicher</h3>
            <p class="text-gray-600 text-sm">Maximale Unabhängigkeit</p>
          </a>

          <a href="/wallbox.html" class="bg-gray-50 p-6 rounded-xl border border-gray-100 hover:shadow-lg transition-all hover:border-[var(--senec-turquoise)]">
            <h3 class="text-lg font-bold text-[var(--senec-blue)] mb-2">Wallbox</h3>
            <p class="text-gray-600 text-sm">E-Auto mit Solarstrom</p>
          </a>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-[var(--senec-blue)] text-white text-center">
      <div class="container-custom mx-auto max-w-3xl">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Kostenlose Beratung in Halle & Saalekreis</h2>
        <p class="text-xl text-gray-200 mb-10">
          Wir kommen zu Ihnen nach Hause, analysieren Ihr Dach und erstellen ein individuelles Angebot – kostenlos und unverbindlich.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/kontakt.html" class="btn-accent text-lg px-8 py-4">
            Beratung anfordern
          </a>
          <a href="/#rechner" class="btn-secondary bg-transparent text-white border-white hover:bg-white hover:text-[var(--senec-blue)] text-lg px-8 py-4">
            Sparpotenzial berechnen
          </a>
        </div>
      </div>
    </section>

  </main>
  
  <Footer />
</Layout>
