---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';

const breadcrumbItems = [
  { label: 'Home', href: '/' },
  { label: 'Standorte', href: '/standorte' },
  { label: 'Nordsachsen' }
];

const pageTitle = "Photovoltaik Nordsachsen | Solaranlage Delitzsch, Torgau, Eilenburg";
const pageDescription = "Photovoltaik Nordsachsen ➤ Delitzsch, Torgau, Eilenburg, Oschatz ✓ Lokaler Fachbetrieb ✓ Kostenlose Beratung ✓ Förderung ☎ Jetzt anfragen";
---

<Layout title={pageTitle} description={pageDescription}>
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "LocalBusiness",
    "@id": "https://leipzig-photovoltaik.de/standorte/nordsachsen#business",
    "name": "Presolaris - Photovoltaik Nordsachsen",
    "image": "https://leipzig-photovoltaik.de/images/logo.webp",
    "description": "Photovoltaik-Fachbetrieb in Nordsachsen für Solaranlagen, Stromspeicher und Wallboxen. Kostenlose Beratung und Installation.",
    "url": "https://leipzig-photovoltaik.de/standorte/nordsachsen",
    "telephone": "+49-341-98990391",
    "email": "info@leipzig-photovoltaik.de",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "Musterstraße 1",
      "addressLocality": "Delitzsch",
      "postalCode": "04509",
      "addressRegion": "Sachsen",
      "addressCountry": "DE"
    },
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": 51.5252132,
      "longitude": 12.3418933
    },
    "areaServed": [
      {
        "@type": "City",
        "name": "Delitzsch"
      },
      {
        "@type": "City",
        "name": "Torgau"
      },
      {
        "@type": "City",
        "name": "Eilenburg"
      },
      {
        "@type": "City",
        "name": "Oschatz"
      },
      {
        "@type": "Place",
        "name": "Nordsachsen"
      }
    ],
    "priceRange": "€€€",
    "openingHoursSpecification": [
      {
        "@type": "OpeningHoursSpecification",
        "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
        "opens": "08:00",
        "closes": "18:00"
      }
    ],
    "sameAs": [
      "https://www.facebook.com/presolaris",
      "https://www.instagram.com/presolaris"
    ]
  })} />
  <Header />
  <Breadcrumb items={breadcrumbItems} />
  
  <main>
    <!-- Hero Section -->
    <section class="relative bg-[var(--senec-blue)] text-white py-20 md:py-32 overflow-hidden">
      <div class="absolute inset-0 z-0">
        <img src="/images/hero-home.png" alt="Photovoltaik Nordsachsen" class="w-full h-full object-cover opacity-30" />
        <div class="absolute inset-0 bg-gradient-to-r from-[var(--senec-blue)] to-transparent"></div>
      </div>
      
      <div class="container-custom mx-auto relative z-10">
        <div class="max-w-3xl">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight mb-6">
            Photovoltaik Nordsachsen – <br/>
            <span class="text-[var(--senec-turquoise)]">Solaranlagen für die Region</span>
          </h1>
          <p class="text-xl text-gray-200 mb-8 leading-relaxed">
            Ihr Fachbetrieb für Photovoltaik in Delitzsch, Torgau, Eilenburg und ganz Nordsachsen. 
            Von der Planung bis zur Wartung – alles aus einer Hand.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="/#rechner" class="btn-accent text-center">
              Sparpotenzial berechnen
            </a>
            <a href="/kontakt" class="btn-secondary bg-transparent text-white border-white hover:bg-white hover:text-[var(--senec-blue)] text-center">
              Kostenlose Beratung
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Warum Nordsachsen Section -->
    <section class="py-20 bg-white">
      <div class="container-custom mx-auto">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-[var(--senec-blue)] mb-4">Photovoltaik in Nordsachsen</h2>
          <p class="text-gray-600">
            Nordsachsen bietet mit über 1.600 Sonnenstunden pro Jahr beste Voraussetzungen für Solaranlagen.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="bg-gray-50 p-8 rounded-xl border border-gray-100 hover:shadow-md transition-shadow">
            <div class="w-12 h-12 bg-[var(--senec-yellow)] rounded-lg flex items-center justify-center mb-6">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-[var(--senec-blue)] mb-3">Ländliche Region</h3>
            <p class="text-gray-600 leading-relaxed">
              Viele Eigenheime und Landwirtschaftsbetriebe mit großen Dachflächen. Ideale Voraussetzungen für Solaranlagen.
            </p>
          </div>

          <div class="bg-gray-50 p-8 rounded-xl border border-gray-100 hover:shadow-md transition-shadow">
            <div class="w-12 h-12 bg-[var(--senec-turquoise)] rounded-lg flex items-center justify-center mb-6">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-[var(--senec-blue)] mb-3">Förderung Sachsen</h3>
            <p class="text-gray-600 leading-relaxed">
              0% MwSt. auf PV-Anlagen plus regionale Förderprogramme. Wir beraten Sie zu allen Möglichkeiten.
            </p>
          </div>

          <div class="bg-gray-50 p-8 rounded-xl border border-gray-100 hover:shadow-md transition-shadow">
            <div class="w-12 h-12 bg-[var(--senec-blue)] rounded-lg flex items-center justify-center mb-6">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-[var(--senec-blue)] mb-3">Regionaler Partner</h3>
            <p class="text-gray-600 leading-relaxed">
              Kurze Wege in die gesamte Region. Schneller Service von Leipzig aus in max. 45 Minuten.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Standorte Section -->
    <section class="py-20 bg-gray-50">
      <div class="container-custom mx-auto">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-[var(--senec-blue)] mb-4">Photovoltaik in ganz Nordsachsen</h2>
          <p class="text-gray-600">
            Von Delitzsch bis Torgau, von Eilenburg bis Oschatz – wir sind in der gesamten Region für Sie da.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
          <!-- Hauptstädte -->
          <div>
            <h3 class="text-2xl font-bold text-[var(--senec-blue)] mb-4">Große Kreisstädte</h3>
            <ul class="space-y-4">
              <li class="bg-white p-4 rounded-lg shadow-sm">
                <h4 class="font-bold text-[var(--senec-blue)] mb-1">Delitzsch</h4>
                <p class="text-gray-600 text-sm">Photovoltaik für Privat, Gewerbe und Landwirtschaft</p>
              </li>
              <li class="bg-white p-4 rounded-lg shadow-sm">
                <h4 class="font-bold text-[var(--senec-blue)] mb-1">Torgau</h4>
                <p class="text-gray-600 text-sm">Solaranlagen für Eigenheime und Mehrfamilienhäuser</p>
              </li>
              <li class="bg-white p-4 rounded-lg shadow-sm">
                <h4 class="font-bold text-[var(--senec-blue)] mb-1">Eilenburg</h4>
                <p class="text-gray-600 text-sm">PV-Anlagen mit Speicher und Wallbox</p>
              </li>
              <li class="bg-white p-4 rounded-lg shadow-sm">
                <h4 class="font-bold text-[var(--senec-blue)] mb-1">Oschatz</h4>
                <p class="text-gray-600 text-sm">Photovoltaik für Stadt und Umland</p>
              </li>
            </ul>
          </div>

          <!-- Weitere Gemeinden -->
          <div>
            <h3 class="text-2xl font-bold text-[var(--senec-blue)] mb-4">Weitere Gemeinden</h3>
            <ul class="space-y-4">
              <li class="bg-white p-4 rounded-lg shadow-sm">
                <h4 class="font-bold text-[var(--senec-blue)] mb-1">Schkeuditz</h4>
                <p class="text-gray-600 text-sm">Solaranlagen für Wohngebiete</p>
              </li>
              <li class="bg-white p-4 rounded-lg shadow-sm">
                <h4 class="font-bold text-[var(--senec-blue)] mb-1">Taucha</h4>
                <p class="text-gray-600 text-sm">Photovoltaik für Eigenheime</p>
              </li>
              <li class="bg-white p-4 rounded-lg shadow-sm">
                <h4 class="font-bold text-[var(--senec-blue)] mb-1">Wurzen</h4>
                <p class="text-gray-600 text-sm">PV-Anlagen für Privat und Gewerbe</p>
              </li>
              <li class="bg-white p-4 rounded-lg shadow-sm">
                <h4 class="font-bold text-[var(--senec-blue)] mb-1">Grimma</h4>
                <p class="text-gray-600 text-sm">Solaranlagen mit Speicherlösungen</p>
              </li>
            </ul>
          </div>
        </div>

        <!-- Landwirtschaft -->
        <div class="mt-12 bg-white p-8 rounded-xl shadow-sm">
          <h3 class="text-2xl font-bold text-[var(--senec-blue)] mb-4">Photovoltaik für Landwirtschaft</h3>
          <p class="text-gray-600 mb-4 leading-relaxed">
            Nordsachsen ist geprägt von Landwirtschaft. Wir installieren Großanlagen auf Scheunen, Ställen und Lagerhallen. 
            Senken Sie Ihre Betriebskosten und werden Sie energieautark.
          </p>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-6">
            <div class="text-center p-4 bg-gray-50 rounded-lg">
              <div class="text-[var(--senec-turquoise)] font-bold text-lg mb-2">Scheunendächer</div>
              <p class="text-gray-600 text-sm">Große Flächen optimal nutzen</p>
            </div>
            <div class="text-center p-4 bg-gray-50 rounded-lg">
              <div class="text-[var(--senec-turquoise)] font-bold text-lg mb-2">Stallgebäude</div>
              <p class="text-gray-600 text-sm">Eigenverbrauch maximieren</p>
            </div>
            <div class="text-center p-4 bg-gray-50 rounded-lg">
              <div class="text-[var(--senec-turquoise)] font-bold text-lg mb-2">Lagerhallen</div>
              <p class="text-gray-600 text-sm">Betriebskosten senken</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Leistungen Section -->
    <section class="py-20 bg-white">
      <div class="container-custom mx-auto">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-[var(--senec-blue)] mb-4">Unsere Leistungen in Nordsachsen</h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          <a href="/privat" class="bg-gray-50 p-6 rounded-xl border border-gray-100 hover:shadow-lg transition-all hover:border-[var(--senec-turquoise)]">
            <h3 class="text-lg font-bold text-[var(--senec-blue)] mb-2">Privathaushalte</h3>
            <p class="text-gray-600 text-sm">Solaranlagen für Eigenheime</p>
          </a>

          <a href="/gewerbe" class="bg-gray-50 p-6 rounded-xl border border-gray-100 hover:shadow-lg transition-all hover:border-[var(--senec-turquoise)]">
            <h3 class="text-lg font-bold text-[var(--senec-blue)] mb-2">Gewerbe</h3>
            <p class="text-gray-600 text-sm">Großanlagen für Unternehmen</p>
          </a>

          <a href="/stromspeicher" class="bg-gray-50 p-6 rounded-xl border border-gray-100 hover:shadow-lg transition-all hover:border-[var(--senec-turquoise)]">
            <h3 class="text-lg font-bold text-[var(--senec-blue)] mb-2">Stromspeicher</h3>
            <p class="text-gray-600 text-sm">Maximale Unabhängigkeit</p>
          </a>

          <a href="/wallbox" class="bg-gray-50 p-6 rounded-xl border border-gray-100 hover:shadow-lg transition-all hover:border-[var(--senec-turquoise)]">
            <h3 class="text-lg font-bold text-[var(--senec-blue)] mb-2">Wallbox</h3>
            <p class="text-gray-600 text-sm">E-Auto mit Solarstrom</p>
          </a>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-[var(--senec-blue)] text-white text-center">
      <div class="container-custom mx-auto max-w-3xl">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Kostenlose Beratung in Nordsachsen</h2>
        <p class="text-xl text-gray-200 mb-10">
          Wir kommen zu Ihnen – ob Delitzsch, Torgau oder Eilenburg. Individuelles Angebot innerhalb von 48 Stunden.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/kontakt" class="btn-accent text-lg px-8 py-4">
            Beratung anfordern
          </a>
          <a href="/#rechner" class="btn-secondary bg-transparent text-white border-white hover:bg-white hover:text-[var(--senec-blue)] text-lg px-8 py-4">
            Sparpotenzial berechnen
          </a>
        </div>
      </div>
    </section>

  </main>
  
  <Footer />
</Layout>
