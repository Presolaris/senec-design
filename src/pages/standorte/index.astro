---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const pageTitle = "Photovoltaik Standorte - Leipzig und Umland | SENEC-Design";
const pageDescription = "Photovoltaik in Leipzig und Umland: Halle, Borna, Grimma, Delitzsch, Markkleeberg, Wurzen, Eilenburg und mehr. Ihr regionaler Partner für Solaranlagen.";

const standorte = [
  { name: "Leipzig", url: "/", einwohner: "620.000", beschreibung: "Unser Hauptstandort", highlight: true },
  { name: "Halle (Saale)", url: "/standorte/halle", einwohner: "233.000", beschreibung: "Sachsen-Anhalt" },
  { name: "Grimma", url: "/standorte/grimma", einwohner: "28.000", beschreibung: "Muldental" },
  { name: "Delitzsch", url: "/standorte/delitzsch", einwohner: "25.000", beschreibung: "Nordsachsen" },
  { name: "Borna", url: "/standorte/borna", einwohner: "19.000", beschreibung: "Neuseenland" },
  { name: "Markkleeberg", url: "/standorte/markkleeberg", einwohner: "25.000", beschreibung: "Südlich von Leipzig" },
  { name: "Wurzen", url: "/standorte/wurzen", einwohner: "16.000", beschreibung: "Muldental" },
  { name: "Eilenburg", url: "/standorte/eilenburg", einwohner: "15.000", beschreibung: "Nordsachsen" },
];

const structuredData = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": "Photovoltaik Leipzig - SENEC-Design",
  "description": "Ihr regionaler Partner für Photovoltaik in Leipzig und Umland.",
  "areaServed": standorte.map(s => ({ "@type": "City", "name": s.name }))
};
---

<Layout 
  title={pageTitle} 
  description={pageDescription}
  ogImage="/images/hero-home.png"
  canonical="https://leipzig-photovoltaik.de/standorte"
>
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="relative bg-[var(--senec-blue)] text-white py-20 md:py-28">
      <div class="container-custom mx-auto">
        <nav class="text-sm mb-6 text-gray-300">
          <a href="/index.html" class="hover:text-white">Startseite</a> / 
          <span class="text-white">Standorte</span>
        </nav>
        
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight mb-6">
          Photovoltaik in <span class="text-[var(--senec-turquoise)]">Ihrer Nähe</span>
        </h1>
        <p class="text-xl text-gray-300 max-w-3xl">
          Wir installieren Solaranlagen in Leipzig und im gesamten Umland bis 50 km. 
          Finden Sie Ihren Standort und erfahren Sie mehr über Photovoltaik in Ihrer Region.
        </p>
      </div>
    </section>

    <!-- Standorte Grid -->
    <section class="py-16 bg-white">
      <div class="container-custom mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-[var(--senec-blue)] mb-12 text-center">
          Unsere Standorte
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {standorte.map((standort) => (
            <a 
              href={standort.url} 
              class={`p-6 rounded-xl border transition-all hover:shadow-lg group ${
                standort.highlight 
                  ? 'bg-[var(--senec-blue)] text-white border-[var(--senec-blue)]' 
                  : 'bg-white border-gray-200 hover:border-[var(--senec-turquoise)]'
              }`}
            >
              <h3 class={`text-xl font-bold mb-2 ${
                standort.highlight 
                  ? 'text-white group-hover:text-[var(--senec-turquoise)]' 
                  : 'text-[var(--senec-blue)] group-hover:text-[var(--senec-turquoise)]'
              }`}>
                Photovoltaik {standort.name}
              </h3>
              <p class={`text-sm mb-3 ${standort.highlight ? 'text-gray-300' : 'text-gray-500'}`}>
                {standort.beschreibung}
              </p>
              <p class={`text-sm ${standort.highlight ? 'text-gray-400' : 'text-gray-400'}`}>
                ca. {standort.einwohner} Einwohner
              </p>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Map Section -->
    <section class="py-16 bg-gray-50">
      <div class="container-custom mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-[var(--senec-blue)] mb-8 text-center">
          Unser Einzugsgebiet
        </h2>
        <p class="text-lg text-gray-600 text-center mb-12 max-w-3xl mx-auto">
          Von Leipzig aus bedienen wir das gesamte Umland im Radius von 50 km. 
          Für Gewerbekunden sind wir in ganz Sachsen, Sachsen-Anhalt und Thüringen aktiv.
        </p>
        
        <div class="bg-white rounded-xl p-8 shadow-sm border border-gray-100">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div>
              <h3 class="font-bold text-[var(--senec-blue)] mb-4">Landkreis Leipzig</h3>
              <ul class="space-y-2 text-gray-600">
                <li><a href="/standorte/borna.html" class="hover:text-[var(--senec-turquoise)]">Borna</a></li>
                <li><a href="/standorte/grimma.html" class="hover:text-[var(--senec-turquoise)]">Grimma</a></li>
                <li><a href="/standorte/markkleeberg.html" class="hover:text-[var(--senec-turquoise)]">Markkleeberg</a></li>
                <li><a href="/standorte/wurzen.html" class="hover:text-[var(--senec-turquoise)]">Wurzen</a></li>
              </ul>
            </div>
            
            <div>
              <h3 class="font-bold text-[var(--senec-blue)] mb-4">Nordsachsen</h3>
              <ul class="space-y-2 text-gray-600">
                <li><a href="/standorte/delitzsch.html" class="hover:text-[var(--senec-turquoise)]">Delitzsch</a></li>
                <li><a href="/standorte/eilenburg.html" class="hover:text-[var(--senec-turquoise)]">Eilenburg</a></li>
                <li>Schkeuditz</li>
                <li>Taucha</li>
              </ul>
            </div>
            
            <div>
              <h3 class="font-bold text-[var(--senec-blue)] mb-4">Sachsen-Anhalt</h3>
              <ul class="space-y-2 text-gray-600">
                <li><a href="/standorte/halle.html" class="hover:text-[var(--senec-turquoise)]">Halle (Saale)</a></li>
                <li>Merseburg</li>
                <li>Weißenfels</li>
                <li>Naumburg</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Services -->
    <section class="py-16 bg-white">
      <div class="container-custom mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-[var(--senec-blue)] mb-12 text-center">
          Unsere Leistungen
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
          <a href="/privat.html" class="bg-gray-50 p-8 rounded-xl border border-gray-100 hover:shadow-md transition-shadow group text-center">
            <div class="w-16 h-16 bg-[var(--senec-turquoise)]/20 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-[var(--senec-turquoise)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
            </div>
            <h3 class="font-bold text-[var(--senec-blue)] mb-2 group-hover:text-[var(--senec-turquoise)]">
              Für Privathaushalte
            </h3>
            <p class="text-gray-600 text-sm">
              Solaranlagen für Ihr Eigenheim
            </p>
          </a>
          
          <a href="/gewerbe.html" class="bg-gray-50 p-8 rounded-xl border border-gray-100 hover:shadow-md transition-shadow group text-center">
            <div class="w-16 h-16 bg-[var(--senec-turquoise)]/20 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-[var(--senec-turquoise)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
            </div>
            <h3 class="font-bold text-[var(--senec-blue)] mb-2 group-hover:text-[var(--senec-turquoise)]">
              Für Gewerbe
            </h3>
            <p class="text-gray-600 text-sm">
              Maßgeschneiderte Lösungen für Unternehmen
            </p>
          </a>
          
          <a href="/solaranlage-leipzig.html" class="bg-gray-50 p-8 rounded-xl border border-gray-100 hover:shadow-md transition-shadow group text-center">
            <div class="w-16 h-16 bg-[var(--senec-turquoise)]/20 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-[var(--senec-turquoise)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
            </div>
            <h3 class="font-bold text-[var(--senec-blue)] mb-2 group-hover:text-[var(--senec-turquoise)]">
              Solaranlage Leipzig
            </h3>
            <p class="text-gray-600 text-sm">
              Komplettlösungen für Leipzig
            </p>
          </a>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-24 bg-[var(--senec-blue)] text-white">
      <div class="container-custom mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Ihr Standort ist nicht dabei?
        </h2>
        <p class="text-xl text-gray-300 mb-10 max-w-2xl mx-auto">
          Kontaktieren Sie uns – wir prüfen gerne, ob wir auch in Ihrer Region aktiv werden können.
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <a href="/kontakt.html" class="btn-accent">Kontakt aufnehmen</a>
          <a href="tel:+4934112345678" class="btn-secondary bg-transparent text-white border-white hover:bg-white hover:text-[var(--senec-blue)]">
            0341 123 456 78
          </a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
  
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
</Layout>
