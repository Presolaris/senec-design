---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';

const breadcrumbItems = [
  { label: 'Home', href: '/' },
  { label: 'Standorte', href: '/standorte' },
  { label: 'Leipzig' }
];

const pageTitle = "Photovoltaik Leipzig | Solaranlage für alle Stadtteile - Presolaris";
const pageDescription = "Photovoltaik in Leipzig & Umgebung ➤ Gohlis, Connewitz, Plagwitz ✓ Lokaler Fachbetrieb ✓ Kostenlose Vor-Ort-Beratung ☎ 0341 98 99 03 91";
---

<Layout title={pageTitle} description={pageDescription}>
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "LocalBusiness",
    "@id": "https://leipzig-photovoltaik.de/standorte/leipzig#business",
    "name": "Presolaris - Photovoltaik Leipzig",
    "image": "https://leipzig-photovoltaik.de/images/logo.webp",
    "description": "Photovoltaik-Fachbetrieb in Leipzig für Solaranlagen, Stromspeicher und Wallboxen. Kostenlose Beratung und Installation aus einer Hand.",
    "url": "https://leipzig-photovoltaik.de/standorte/leipzig",
    "telephone": "+49-341-98990391",
    "email": "info@leipzig-photovoltaik.de",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "Musterstraße 1",
      "addressLocality": "Leipzig",
      "postalCode": "04109",
      "addressRegion": "Sachsen",
      "addressCountry": "DE"
    },
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": 51.3396955,
      "longitude": 12.3730747
    },
    "areaServed": [
      {
        "@type": "City",
        "name": "Leipzig"
      },
      {
        "@type": "Place",
        "name": "Gohlis"
      },
      {
        "@type": "Place",
        "name": "Connewitz"
      },
      {
        "@type": "Place",
        "name": "Plagwitz"
      },
      {
        "@type": "Place",
        "name": "Schleußig"
      },
      {
        "@type": "Place",
        "name": "Reudnitz"
      }
    ],
    "priceRange": "€€€",
    "openingHoursSpecification": [
      {
        "@type": "OpeningHoursSpecification",
        "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
        "opens": "08:00",
        "closes": "18:00"
      }
    ],
    "sameAs": [
      "https://www.facebook.com/presolaris",
      "https://www.instagram.com/presolaris"
    ]
  })} />
  <Header />
  <Breadcrumb items={breadcrumbItems} />
  
  <main>
    <!-- Hero Section -->
    <section class="relative bg-[var(--senec-blue)] text-white py-20 md:py-32 overflow-hidden">
      <div class="absolute inset-0 z-0">
        <img src="/images/hero-home.png" alt="Photovoltaik Leipzig" class="w-full h-full object-cover opacity-30" />
        <div class="absolute inset-0 bg-gradient-to-r from-[var(--senec-blue)] to-transparent"></div>
      </div>
      
      <div class="container-custom mx-auto relative z-10">
        <div class="max-w-3xl">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight mb-6">
            Photovoltaik Leipzig – <br/>
            <span class="text-[var(--senec-turquoise)]">Solaranlagen für Privat & Gewerbe</span>
          </h1>
          <p class="text-xl text-gray-200 mb-8 leading-relaxed">
            Ihr lokaler Fachbetrieb für Photovoltaik, Stromspeicher und Wallboxen in Leipzig und Umgebung. 
            Von der Planung bis zur Inbetriebnahme – alles aus einer Hand.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="/#rechner" class="btn-accent text-center">
              Sparpotenzial berechnen
            </a>
            <a href="/kontakt.html" class="btn-secondary bg-transparent text-white border-white hover:bg-white hover:text-[var(--senec-blue)] text-center">
              Kostenlose Beratung
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Warum Leipzig Section -->
    <section class="py-20 bg-white">
      <div class="container-custom mx-auto">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-[var(--senec-blue)] mb-4">Warum Photovoltaik in Leipzig?</h2>
          <p class="text-gray-600">
            Leipzig bietet ideale Bedingungen für Solaranlagen – nutzen Sie die Sonnenenergie für Ihr Zuhause oder Unternehmen.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Benefit 1 -->
          <div class="bg-gray-50 p-8 rounded-xl border border-gray-100 hover:shadow-md transition-shadow">
            <div class="w-12 h-12 bg-[var(--senec-yellow)] rounded-lg flex items-center justify-center mb-6">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-[var(--senec-blue)] mb-3">1.600 Sonnenstunden/Jahr</h3>
            <p class="text-gray-600 leading-relaxed">
              Leipzig gehört zu den sonnenreichsten Regionen Mitteldeutschlands. Ideale Voraussetzungen für hohe Solarerträge.
            </p>
          </div>

          <!-- Benefit 2 -->
          <div class="bg-gray-50 p-8 rounded-xl border border-gray-100 hover:shadow-md transition-shadow">
            <div class="w-12 h-12 bg-[var(--senec-turquoise)] rounded-lg flex items-center justify-center mb-6">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-[var(--senec-blue)] mb-3">Lokaler Fachbetrieb</h3>
            <p class="text-gray-600 leading-relaxed">
              Kurze Wege, schnelle Reaktionszeiten und persönliche Betreuung. Wir sind in 30 Minuten bei Ihnen vor Ort.
            </p>
          </div>

          <!-- Benefit 3 -->
          <div class="bg-gray-50 p-8 rounded-xl border border-gray-100 hover:shadow-md transition-shadow">
            <div class="w-12 h-12 bg-[var(--senec-blue)] rounded-lg flex items-center justify-center mb-6">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-[var(--senec-blue)] mb-3">Förderung & Finanzierung</h3>
            <p class="text-gray-600 leading-relaxed">
              Profitieren Sie von 0% MwSt. auf PV-Anlagen und regionalen Förderprogrammen der Stadt Leipzig.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Leistungen Section -->
    <section class="py-20 bg-gray-50">
      <div class="container-custom mx-auto">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-[var(--senec-blue)] mb-4">Unsere Leistungen in Leipzig</h2>
          <p class="text-gray-600">
            Von der Beratung bis zur Wartung – wir begleiten Sie durch Ihr gesamtes Solar-Projekt.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          <a href="/privat.html" class="bg-white p-6 rounded-xl border border-gray-100 hover:shadow-lg transition-all hover:border-[var(--senec-turquoise)]">
            <h3 class="text-lg font-bold text-[var(--senec-blue)] mb-2">Privathaushalte</h3>
            <p class="text-gray-600 text-sm">Solaranlagen für Einfamilienhäuser und Mehrfamilienhäuser</p>
          </a>

          <a href="/gewerbe.html" class="bg-white p-6 rounded-xl border border-gray-100 hover:shadow-lg transition-all hover:border-[var(--senec-turquoise)]">
            <h3 class="text-lg font-bold text-[var(--senec-blue)] mb-2">Gewerbe & Industrie</h3>
            <p class="text-gray-600 text-sm">Großanlagen für Unternehmen und Produktionshallen</p>
          </a>

          <a href="/stromspeicher.html" class="bg-white p-6 rounded-xl border border-gray-100 hover:shadow-lg transition-all hover:border-[var(--senec-turquoise)]">
            <h3 class="text-lg font-bold text-[var(--senec-blue)] mb-2">Stromspeicher</h3>
            <p class="text-gray-600 text-sm">Speicherlösungen für maximale Unabhängigkeit</p>
          </a>

          <a href="/wallbox.html" class="bg-white p-6 rounded-xl border border-gray-100 hover:shadow-lg transition-all hover:border-[var(--senec-turquoise)]">
            <h3 class="text-lg font-bold text-[var(--senec-blue)] mb-2">Wallbox</h3>
            <p class="text-gray-600 text-sm">E-Auto laden mit Solarstrom</p>
          </a>
        </div>
      </div>
    </section>

    <!-- Stadtteile Section -->
    <section class="py-20 bg-white">
      <div class="container-custom mx-auto">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-[var(--senec-blue)] mb-4">Photovoltaik in allen Leipziger Stadtteilen</h2>
          <p class="text-gray-600">
            Wir sind in ganz Leipzig und Umgebung für Sie da – von Gohlis bis Connewitz, von Plagwitz bis Schönefeld.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
          <!-- Leipzig-Nord -->
          <div>
            <h3 class="text-2xl font-bold text-[var(--senec-blue)] mb-4 flex items-center">
              <span class="w-8 h-8 bg-[var(--senec-turquoise)] rounded-lg flex items-center justify-center mr-3 text-white text-sm">N</span>
              Leipzig-Nord
            </h3>
            <p class="text-gray-600 mb-4 leading-relaxed">
              In Gohlis, Eutritzsch, Mockau und Wahren installieren wir Solaranlagen auf Gründerzeitdächern und modernen Neubauten. 
              Die denkmalgeschützten Altbauten erfordern besondere Expertise – wir kennen die Anforderungen und beraten Sie kompetent.
            </p>
            <ul class="space-y-2 text-gray-600">
              <li class="flex items-start">
                <span class="text-[var(--senec-turquoise)] mr-2">✓</span>
                <span>Gohlis – Photovoltaik für Altbau und Neubau</span>
              </li>
              <li class="flex items-start">
                <span class="text-[var(--senec-turquoise)] mr-2">✓</span>
                <span>Eutritzsch – Solaranlagen für Einfamilienhäuser</span>
              </li>
              <li class="flex items-start">
                <span class="text-[var(--senec-turquoise)] mr-2">✓</span>
                <span>Mockau – PV-Anlagen mit Speicher</span>
              </li>
            </ul>
          </div>

          <!-- Leipzig-Süd -->
          <div>
            <h3 class="text-2xl font-bold text-[var(--senec-blue)] mb-4 flex items-center">
              <span class="w-8 h-8 bg-[var(--senec-turquoise)] rounded-lg flex items-center justify-center mr-3 text-white text-sm">S</span>
              Leipzig-Süd
            </h3>
            <p class="text-gray-600 mb-4 leading-relaxed">
              Connewitz, Lößnig und Probstheida sind beliebte Wohnviertel mit vielen Eigenheimen. 
              Hier realisieren wir täglich Solaranlagen für umweltbewusste Familien, die ihre Energiekosten senken möchten.
            </p>
            <ul class="space-y-2 text-gray-600">
              <li class="flex items-start">
                <span class="text-[var(--senec-turquoise)] mr-2">✓</span>
                <span>Connewitz – Solaranlage für Ihr Zuhause</span>
              </li>
              <li class="flex items-start">
                <span class="text-[var(--senec-turquoise)] mr-2">✓</span>
                <span>Lößnig – Photovoltaik mit Wallbox</span>
              </li>
              <li class="flex items-start">
                <span class="text-[var(--senec-turquoise)] mr-2">✓</span>
                <span>Probstheida – PV-Anlagen für Mehrfamilienhäuser</span>
              </li>
            </ul>
          </div>

          <!-- Leipzig-West -->
          <div>
            <h3 class="text-2xl font-bold text-[var(--senec-blue)] mb-4 flex items-center">
              <span class="w-8 h-8 bg-[var(--senec-turquoise)] rounded-lg flex items-center justify-center mr-3 text-white text-sm">W</span>
              Leipzig-West
            </h3>
            <p class="text-gray-600 mb-4 leading-relaxed">
              Plagwitz, Lindenau und Schleußig sind Trendviertel mit vielen Gewerbeflächen und Wohnprojekten. 
              Wir installieren Solaranlagen auf Flachdächern, Schrägdächern und Industriehallen.
            </p>
            <ul class="space-y-2 text-gray-600">
              <li class="flex items-start">
                <span class="text-[var(--senec-turquoise)] mr-2">✓</span>
                <span>Plagwitz – Photovoltaik für Gewerbe</span>
              </li>
              <li class="flex items-start">
                <span class="text-[var(--senec-turquoise)] mr-2">✓</span>
                <span>Lindenau – Solaranlagen für Mehrfamilienhäuser</span>
              </li>
              <li class="flex items-start">
                <span class="text-[var(--senec-turquoise)] mr-2">✓</span>
                <span>Schleußig – PV-Anlagen mit Speicher</span>
              </li>
            </ul>
          </div>

          <!-- Leipzig-Ost -->
          <div>
            <h3 class="text-2xl font-bold text-[var(--senec-blue)] mb-4 flex items-center">
              <span class="w-8 h-8 bg-[var(--senec-turquoise)] rounded-lg flex items-center justify-center mr-3 text-white text-sm">O</span>
              Leipzig-Ost
            </h3>
            <p class="text-gray-600 mb-4 leading-relaxed">
              Reudnitz, Schönefeld und Anger-Crottendorf bieten viel Potenzial für Solaranlagen. 
              Ob Plattenbau oder Einfamilienhaus – wir finden die passende Lösung für Ihr Dach.
            </p>
            <ul class="space-y-2 text-gray-600">
              <li class="flex items-start">
                <span class="text-[var(--senec-turquoise)] mr-2">✓</span>
                <span>Reudnitz – Photovoltaik für Wohnblöcke</span>
              </li>
              <li class="flex items-start">
                <span class="text-[var(--senec-turquoise)] mr-2">✓</span>
                <span>Schönefeld – Solaranlagen für Eigenheime</span>
              </li>
              <li class="flex items-start">
                <span class="text-[var(--senec-turquoise)] mr-2">✓</span>
                <span>Anger-Crottendorf – PV-Anlagen mit Wallbox</span>
              </li>
            </ul>
          </div>
        </div>

        <!-- Umland -->
        <div class="mt-12 bg-gray-50 p-8 rounded-xl">
          <h3 class="text-2xl font-bold text-[var(--senec-blue)] mb-4">Leipzig-Umland</h3>
          <p class="text-gray-600 mb-4 leading-relaxed">
            Auch in Markkleeberg, Taucha, Schkeuditz und Markranstädt sind wir Ihr Ansprechpartner für Photovoltaik. 
            Profitieren Sie von kurzen Anfahrtswegen und schnellem Service.
          </p>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mt-6">
            <div class="text-center">
              <div class="text-[var(--senec-turquoise)] font-bold text-lg">Markkleeberg</div>
              <div class="text-gray-600 text-sm">10 km südlich</div>
            </div>
            <div class="text-center">
              <div class="text-[var(--senec-turquoise)] font-bold text-lg">Taucha</div>
              <div class="text-gray-600 text-sm">12 km nordöstlich</div>
            </div>
            <div class="text-center">
              <div class="text-[var(--senec-turquoise)] font-bold text-lg">Schkeuditz</div>
              <div class="text-gray-600 text-sm">15 km nordwestlich</div>
            </div>
            <div class="text-center">
              <div class="text-[var(--senec-turquoise)] font-bold text-lg">Markranstädt</div>
              <div class="text-gray-600 text-sm">12 km westlich</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Referenzen Section -->
    <section class="py-20 bg-gray-50">
      <div class="container-custom mx-auto">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-[var(--senec-blue)] mb-4">Referenzen aus Leipzig</h2>
          <p class="text-gray-600">
            Über 500 zufriedene Kunden in Leipzig und Umgebung vertrauen auf unsere Expertise.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="bg-white p-6 rounded-xl shadow-md">
            <div class="aspect-video bg-gray-200 rounded-lg mb-4 overflow-hidden">
              <img src="/images/installation.png" alt="Referenz Leipzig-Gohlis" class="w-full h-full object-cover" />
            </div>
            <h4 class="font-bold text-[var(--senec-blue)] mb-2">Einfamilienhaus Leipzig-Gohlis</h4>
            <p class="text-gray-600 text-sm mb-2">10 kWp Photovoltaikanlage + 10 kWh Speicher</p>
            <p class="text-gray-600 text-sm">Autarkie: 85% | Ersparnis: 2.400€/Jahr</p>
          </div>

          <div class="bg-white p-6 rounded-xl shadow-md">
            <div class="aspect-video bg-gray-200 rounded-lg mb-4 overflow-hidden">
              <img src="/images/installation.png" alt="Referenz Leipzig-Connewitz" class="w-full h-full object-cover" />
            </div>
            <h4 class="font-bold text-[var(--senec-blue)] mb-2">Mehrfamilienhaus Leipzig-Connewitz</h4>
            <p class="text-gray-600 text-sm mb-2">25 kWp Photovoltaikanlage</p>
            <p class="text-gray-600 text-sm">Mieterstrom-Modell | 8 Parteien</p>
          </div>

          <div class="bg-white p-6 rounded-xl shadow-md">
            <div class="aspect-video bg-gray-200 rounded-lg mb-4 overflow-hidden">
              <img src="/images/installation.png" alt="Referenz Leipzig-Plagwitz" class="w-full h-full object-cover" />
            </div>
            <h4 class="font-bold text-[var(--senec-blue)] mb-2">Gewerbe Leipzig-Plagwitz</h4>
            <p class="text-gray-600 text-sm mb-2">50 kWp Photovoltaikanlage + Wallboxen</p>
            <p class="text-gray-600 text-sm">Eigenverbrauch: 70% | ROI: 8 Jahre</p>
          </div>
        </div>

        <div class="text-center mt-12">
          <a href="/referenzen.html" class="btn-accent">
            Alle Referenzen ansehen
          </a>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-[var(--senec-blue)] text-white text-center">
      <div class="container-custom mx-auto max-w-3xl">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Jetzt kostenlose Vor-Ort-Beratung vereinbaren</h2>
        <p class="text-xl text-gray-200 mb-10">
          Wir kommen zu Ihnen nach Hause, analysieren Ihr Dach und erstellen ein individuelles Angebot – kostenlos und unverbindlich.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/kontakt.html" class="btn-accent text-lg px-8 py-4">
            Beratung anfordern
          </a>
          <a href="tel:+4934198990391" class="btn-secondary bg-transparent text-white border-white hover:bg-white hover:text-[var(--senec-blue)] text-lg px-8 py-4">
            ☎ 0341 98 99 03 91
          </a>
        </div>
      </div>
    </section>

  </main>
  
  <Footer />
</Layout>
