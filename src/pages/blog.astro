---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const pageTitle = "Solar-Blog - Aktuelle Informationen zu Photovoltaik | SENEC";
const pageDescription = "Aktuelle Informationen, Expertenwissen und Tipps rund um Photovoltaik, Förderungen und nachhaltige Energie.";

const blogArticles = [
  {
    category: "Wartung",
    title: "5 Wartungstipps für Ihre Photovoltaikanlage im Winter",
    excerpt: "Praktische Wartungstipps für Photovoltaikanlagen im Winter: Schneeräumung, Monitoring, Verschattung, Wechselrichter-Schutz und Versicherung. So maximieren Sie den Winterertrag.",
    author: "Solar Experten Redaktion",
    date: "19. Jan. 2026",
    image: "/images/blog/solaranlage-wartung.webp",
    link: "#"
  },
  {
    category: "Solartechnik",
    title: "Neue Speicher-Technologien 2026: Was Sie jetzt wissen müssen",
    excerpt: "Umfassender Überblick über neue Speicher-Technologien 2026: Lithium-Ionen, Natrium-Ionen, Festkörper-Batterien, Kosten, Förderungen und Kaufberatung. Welcher Speicher passt zu Ihnen?",
    author: "Solar Experten Redaktion",
    date: "19. Jan. 2026",
    image: "/images/blog/stromspeicher-2026.webp",
    link: "#"
  },
  {
    category: "Förderungen",
    title: "Photovoltaik Förderungen 2026: Alle Programme im Überblick",
    excerpt: "Umfassender Ratgeber zu allen Photovoltaik-Förderungen 2026: KfW-Programme, Landesförderungen, Steuervorteile und Kombinationsmöglichkeiten. Bis zu 60% Ersparnis möglich.",
    author: "Solar Experten Redaktion",
    date: "19. Jan. 2026",
    image: "/images/blog/foerderungen-2026.webp",
    link: "#",
    sources: ["KfW Bankengruppe", "Bundesministerium für Wirtschaft und Klimaschutz"]
  },
  {
    category: "Förderungen",
    title: "Photovoltaik Förderungen 2026: Alle Zuschüsse und Steuervorteile im Überblick",
    excerpt: "Nutzen Sie 2026 alle verfügbaren Förderungen für Ihre Photovoltaikanlage. Von 0% MwSt. über KfW-Kredite bis zu regionalen Zuschüssen – wir zeigen Ihnen, wie Sie bis zu 70% sparen können.",
    author: "Solar Experten Redaktion",
    date: "15. Jan. 2026",
    image: "/images/blog/foerderungen-2026.webp",
    link: "#",
    sources: ["Bundesfinanzministerium", "KfW"]
  },
  {
    category: "Solartechnik",
    title: "Photovoltaik Kosten 2026: Was kostet eine Solaranlage wirklich?",
    excerpt: "Transparente Kostenübersicht für Photovoltaikanlagen 2026. Erfahren Sie, mit welchen Preisen Sie rechnen müssen und wie Sie bis zu 30% sparen können.",
    author: "Solar Experten Redaktion",
    date: "14. Jan. 2026",
    image: "/images/blog/photovoltaik-kosten-2026.webp",
    link: "#"
  },
  {
    category: "Solartechnik",
    title: "Stromspeicher 2026: Lohnt sich ein Batteriespeicher für Ihre Solaranlage?",
    excerpt: "Stromspeicher können Ihren Eigenverbrauch auf bis zu 80% steigern. Wir zeigen Ihnen, wann sich die Investition lohnt und welche Speichergröße optimal ist.",
    author: "Solar Experten Redaktion",
    date: "11. Jan. 2026",
    image: "/images/blog/stromspeicher-2026.webp",
    link: "#"
  },
  {
    category: "Wartung",
    title: "Solaranlage Wartung: Warum regelmäßige Wartung Ihre Erträge maximiert",
    excerpt: "Ohne regelmäßige Wartung können Solaranlagen bis zu 30% Ertrag verlieren. Erfahren Sie, warum professionelle Wartung sich rechnet und was dabei zu beachten ist.",
    author: "Solar Experten Redaktion",
    date: "10. Jan. 2026",
    image: "/images/blog/solaranlage-wartung.webp",
    link: "#"
  },
  {
    category: "Solartechnik",
    title: "10 häufigste Fehler beim Solarkauf - und wie Sie sie vermeiden",
    excerpt: "Diese 10 Fehler kosten Hausbesitzer tausende Euro beim Kauf einer Solaranlage. Erfahren Sie, wie Sie typische Fallen umgehen und die richtige Entscheidung treffen.",
    author: "Solar Experten Redaktion",
    date: "09. Jan. 2026",
    image: "/images/blog/solarkauf-fehler.webp",
    link: "#"
  },
  {
    category: "Solartechnik",
    title: "Stromspeicher nachrüsten: Lohnt sich ein Batteriespeicher für Bestandsanlagen?",
    excerpt: "Stromspeicher nachrüsten und Eigenverbrauch von 30% auf 80% steigern. Wann lohnt sich ein Batteriespeicher für Bestandsanlagen? Kosten, Förderungen und Wirtschaftlichkeit im Detail.",
    author: "Solar Experten Redaktion",
    date: "05. Jan. 2026",
    image: "/images/blog/stromspeicher-nachruesten.webp",
    link: "#"
  }
];

const categories = ["Alle", "Solartechnik", "Förderungen", "Wartung", "News"];
---

<Layout title={pageTitle} description={pageDescription}>
  <Header />
  
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-[#0a1628] via-[#0d1f3a] to-[#0a1628] text-white py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Solar-Blog</h1>
        <p class="text-xl text-gray-300 mb-8">
          Aktuelle Informationen, Expertenwissen und Tipps rund um Photovoltaik, Förderungen und nachhaltige Energie.
        </p>
        
        <!-- Search Bar -->
        <div class="max-w-2xl mx-auto">
          <div class="relative">
            <input 
              type="text" 
              placeholder="Artikel durchsuchen..." 
              class="w-full px-6 py-4 rounded-lg bg-white/10 backdrop-blur-sm border border-white/20 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-[var(--senec-turquoise)]"
            />
            <svg class="absolute right-4 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Category Filter -->
  <section class="bg-white border-b border-gray-200 sticky top-20 z-40">
    <div class="container mx-auto px-4 py-4">
      <div class="flex flex-wrap gap-3 justify-center">
        {categories.map((category) => (
          <button class="px-6 py-2 rounded-full text-sm font-medium transition-colors
            {category === 'Alle' 
              ? 'bg-[var(--senec-turquoise)] text-white' 
              : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}">
            {category}
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- Blog Grid -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
        {blogArticles.map((article) => (
          <article class="bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-xl transition-shadow">
            <a href={article.link} class="block">
              <div class="relative h-48 overflow-hidden">
                <picture>
                  <source srcset={article.image} type="image/webp">
                  <img 
                    src={article.image} 
                    alt={article.title}
                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                    loading="lazy"
                  />
                </picture>
                <div class="absolute top-4 left-4">
                  <span class="bg-[var(--senec-turquoise)] text-white px-3 py-1 rounded-full text-xs font-semibold">
                    {article.category}
                  </span>
                </div>
              </div>
              
              <div class="p-6">
                <h3 class="text-xl font-bold text-gray-900 mb-3 hover:text-[var(--senec-turquoise)] transition-colors line-clamp-2">
                  {article.title}
                </h3>
                
                <p class="text-gray-600 mb-4 line-clamp-3">
                  {article.excerpt}
                </p>
                
                <div class="flex items-center justify-between text-sm text-gray-500 mb-4">
                  <div class="flex items-center gap-2">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                    <span>{article.author}</span>
                  </div>
                  <div class="flex items-center gap-2">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    <span>{article.date}</span>
                  </div>
                </div>
                
                {article.sources && (
                  <div class="text-xs text-gray-400 mb-4">
                    <strong>Quellen:</strong> {article.sources.join(', ')}
                  </div>
                )}
                
                <div class="flex items-center text-[var(--senec-turquoise)] font-semibold hover:underline">
                  Weiterlesen
                  <svg class="w-4 h-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </div>
              </div>
            </a>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="bg-gradient-to-br from-[#0a1628] to-[#0d1f3a] rounded-2xl p-8 md:p-12 text-center text-white max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold mb-4">Bereit für Ihre eigene Solaranlage?</h2>
        <p class="text-xl text-gray-300 mb-8">
          Lassen Sie sich jetzt kostenlos beraten und erfahren Sie, wie viel Sie mit Photovoltaik sparen können.
        </p>
        <a href="/kontakt" class="inline-block bg-[#f5c518] text-[#0a1628] font-semibold px-8 py-4 rounded-lg hover:bg-yellow-400 transition-colors">
          Angebot anfordern
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
