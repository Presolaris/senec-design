---
import '../styles/global.css';

interface Props {
	title: string;
	description?: string;
	ogImage?: string;
	ogType?: string;
	canonical?: string;
	noindex?: boolean;
}

const {
	title,
	description = "Ihr Experte für Photovoltaik, Stromspeicher und Wallboxen in Leipzig und Umgebung. Nachhaltige Energielösungen mit SENEC-Design.",
	ogImage = "/images/hero-home.png",
	ogType = "website",
	canonical,
	noindex = false
} = Astro.props;

const siteUrl = "https://leipzig-photovoltaik.de";
const fullTitle = `${title} | SENEC-Design`;
const canonicalURL = canonical || new URL(Astro.url.pathname, siteUrl).href;
const ogImageURL = new URL(ogImage, siteUrl).href;

// Structured Data for LocalBusiness
const structuredData = {
	"@context": "https://schema.org",
	"@type": "LocalBusiness",
	"@id": `${siteUrl}/#organization`,
	"name": "SENEC-Design Leipzig",
	"alternateName": "Leipzig Photovoltaik",
	"description": description,
	"url": siteUrl,
	"logo": `${siteUrl}/images/logo.webp`,
	"image": ogImageURL,
	"telephone": "+49-341-12345678",
	"email": "info@leipzig-photovoltaik.de",
	"address": {
		"@type": "PostalAddress",
		"streetAddress": "Musterstraße 123",
		"addressLocality": "Leipzig",
		"postalCode": "04109",
		"addressCountry": "DE"
	},
	"geo": {
		"@type": "GeoCoordinates",
		"latitude": "51.3397",
		"longitude": "12.3731"
	},
	"areaServed": [
		{
			"@type": "City",
			"name": "Leipzig"
		},
		{
			"@type": "State",
			"name": "Sachsen"
		}
	],
	"priceRange": "€€",
	"openingHoursSpecification": [
		{
			"@type": "OpeningHoursSpecification",
			"dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
			"opens": "08:00",
			"closes": "18:00"
		}
	],
	"sameAs": [
		"https://www.facebook.com/leipzigphotovoltaik",
		"https://www.instagram.com/leipzigphotovoltaik"
	]
};
---

<!doctype html>
<html lang="de" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Primary Meta Tags -->
		<title>{fullTitle}</title>
		<meta name="title" content={fullTitle} />
		<meta name="description" content={description} />
		<meta name="keywords" content="Photovoltaik Leipzig, Solaranlage Leipzig, Stromspeicher, Wallbox, SENEC, Energiewende, PV-Anlage, Solarstrom, E-Mobilität" />
		<meta name="author" content="SENEC-Design Leipzig" />
		<link rel="canonical" href={canonicalURL} />
		{noindex && <meta name="robots" content="noindex, nofollow" />}
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content={ogType} />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={fullTitle} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={ogImageURL} />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:locale" content="de_DE" />
		<meta property="og:site_name" content="SENEC-Design Leipzig" />
		
		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:url" content={canonicalURL} />
		<meta name="twitter:title" content={fullTitle} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={ogImageURL} />
		
		<!-- Favicon -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		
		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
		
		<!-- Structured Data -->
		<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
	</head>
	<body class="font-sans antialiased text-gray-900 bg-white">
		<slot />
	</body>
</html>
